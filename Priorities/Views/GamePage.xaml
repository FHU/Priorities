<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Priorities.Views.GamePage"
             Shell.FlyoutBehavior="Flyout"
             xmlns:viewmodels="clr-namespace:Priorities.ViewModels"
             xmlns:models="clr-namespace:Priorities.Models"
             x:DataType="viewmodels:GamePageViewModel"
             Title="GamePage">

    <!-- Grid wrapper for the entire game page -->

    <Grid RowDefinitions="0.10*,0.13*,0.77*" ColumnDefinitions="*" RowSpacing="10">

        <!-- [Header: Abbie Vance] -->
        <!-- One Row / Two Columns -->
        <Grid RowDefinitions="*" ColumnDefinitions="*,*" Row="0" Padding="10,0" BackgroundColor="#dddddd">
            <HorizontalStackLayout Grid.ColumnSpan="2" VerticalOptions="End" Margin="0,0,0,5">
                <Label
                    Text="{Binding Score}"
                    FontSize="30"
                    Margin="5,0"
                    FontFamily="ConcertOneRegular"
                    />
                <Label
                    Text="Points"
                    VerticalOptions="End"
                    FontFamily="ConcertOneRegular"/>
            </HorizontalStackLayout>

            <HorizontalStackLayout Grid.Column="1" HorizontalOptions="End" VerticalOptions="End" Margin="0,0,0,5">
                <Label
                    VerticalOptions="End"
                    Text="Round"
                    Margin="5,0"
                    FontFamily="ConcertOneRegular"/>

                <Label
                    VerticalOptions="End"
                    Text="{Binding RoundNumber}"
                    FontSize="30"
                    FontFamily="ConcertOneRegular"
                />
            </HorizontalStackLayout>
        </Grid>

        <!-- [Guesser / Prioritize Label: Priscilla Harris] -->
        <!-- One Row / Three Columns -->
        <Grid Row="1" RowDefinitions="*" ColumnDefinitions="*,*,*" Margin="10,0" VerticalOptions="Center">
            <HorizontalStackLayout Grid.Column="0" VerticalOptions="Center">
                <Frame
                   HeightRequest="70"
                   WidthRequest="70"
                   CornerRadius="35"
                   VerticalOptions="Center"
                   IsClippedToBounds="True"
                   BorderColor="Gray"
                   Margin="0,0,20,0">
                    <Image
                        Aspect="AspectFit"
                        Source="{Binding PlayerImage}"
                        SemanticProperties.Description="Cute dot net bot waving hi to you!"
                        HeightRequest="70"
                        WidthRequest="70"
                        VerticalOptions="Center"
                        HorizontalOptions="Center" />
                </Frame>
                <VerticalStackLayout Grid.Column="1" VerticalOptions="End">
                    <Label
                    Text="Guessing Priorities for"
                    HorizontalOptions="Center"
                    Margin="0,0,0,10"
                    FontSize="16"
                    FontFamily="ConcertOneRegular"
                    />
                    <Label
                    Text="{Binding PlayerName}"
                    FontSize="25"
                    HorizontalOptions="Start"
                    FontFamily="ConcertOneRegular"
                    ></Label>
                </VerticalStackLayout>

            </HorizontalStackLayout>

            <Button
            Grid.Column="2"
            Text="{Binding Timer}"
            CornerRadius="100"
            HorizontalOptions="End"
            VerticalOptions="End"
            FontSize="20"
            IsEnabled="False"
            FontFamily="ConcertOneRegular"
            />
        </Grid>

        <!-- [Priority Cards Section: Priscilla Harris] -->
        <!-- Six Rows / Two Columns -->
        <Grid Row="2" RowDefinitions="*,*,*,*,*,*,*" ColumnDefinitions="0.20*,0.75*, 0.05*" ColumnSpacing="9" Margin="20,0">

            <!-- Priority Rank Numbers -->

            <Button
                CornerRadius="100"
                HeightRequest="55"
                WidthRequest="55"
                Grid.Column="0"
                Grid.Row="0"
                Text="1"
                FontSize="20"
                VerticalOptions="Center"
                IsEnabled="False"
                FontFamily="ConcertOneRegular"
            />

            <Button
                CornerRadius="100"
                HeightRequest="55"
                WidthRequest="55"
                Grid.Column="0"
                Grid.Row="1"
                Text="2"
                FontSize="20"
                VerticalOptions="Center"
                IsEnabled="False"
                FontFamily="ConcertOneRegular"
            />

            <Button
                CornerRadius="100"
                HeightRequest="55"
                WidthRequest="55"
                Grid.Column="0"
                Grid.Row="2"
                Text="3"
                FontSize="20"
                VerticalOptions="Center"
                IsEnabled="False"
                FontFamily="ConcertOneRegular"
            />

            <Button
                CornerRadius="100"
                HeightRequest="55"
                WidthRequest="55"
                Grid.Column="0"
                Grid.Row="3"
                Text="4"
                FontSize="20"
                VerticalOptions="Center"
                IsEnabled="False"
                FontFamily="ConcertOneRegular"
            />

            <Button
                CornerRadius="100"
                HeightRequest="55"
                WidthRequest="55"
                Grid.Column="0"
                Grid.Row="4"
                Text="5"
                FontSize="20"
                VerticalOptions="Center"
                IsEnabled="False"
                FontFamily="ConcertOneRegular"
            />

            <!-- Priority Cards -->
            <CollectionView Grid.RowSpan="5" Grid.Column="1"
                ItemsSource="{Binding Priorities}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Priority">
                        <Button
                        CornerRadius="20"
                        Text="{Binding Thing}"
                        Margin="0, 9"
                        HeightRequest="60"
                        FontSize="20"
                        FontFamily="ConcertOneRegular"/>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Button
                Grid.ColumnSpan="3"
                Grid.Column="0"
                CornerRadius="20"
                Grid.Row="5"
                Text="Submit"
                FontSize="20"
                Margin="0,40,0,0"
                HeightRequest="75"
                FontFamily="ConcertOneRegular"/>
        </Grid>
    </Grid>
</ContentPage>