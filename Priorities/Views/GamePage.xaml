<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Priorities.Views.GamePage"
             Shell.FlyoutBehavior="Flyout"
             xmlns:viewmodels="clr-namespace:Priorities.ViewModels"
             xmlns:models="clr-namespace:Priorities.Models"
             xmlns:views="clr-namespace:Priorities.Views"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"

             x:DataType="viewmodels:GamePageViewModel"
             Title="GamePage"
             Shell.NavBarIsVisible="False"
             Shell.BackgroundColor="{StaticResource DarkGray}"
             BackgroundColor="{StaticResource OffWhite}"
             x:Name="MainPageContainer">


    <ContentPage.Behaviors>
        <toolkit:StatusBarBehavior StatusBarColor="{StaticResource DarkGray}" />
    </ContentPage.Behaviors>



    <!-- Grid wrapper for the entire game page -->
    <Grid RowDefinitions="80, *" >
        <Grid Grid.Row="0" ColumnDefinitions="*,4*,*" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" BackgroundColor="{StaticResource DarkGray}" Margin="0,-5,0,0">
            <Button Text="☰"  BackgroundColor="Transparent" FontSize="40" VerticalOptions="Center" Margin="0,-16,0,0" Clicked="HamburgerMenuButton_Clicked"/>
            <Label Grid.Column="1" LineBreakMode="NoWrap" VerticalOptions="Center" HorizontalOptions="Center">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="M" FontSize="36" TextColor="{StaticResource PrimaryRed}" FontFamily="CoinyRegular"/>
                        <Span Text="O" FontSize="36" TextColor="{StaticResource SecondaryGreen}" FontFamily="CoinyRegular"/>
                        <Span Text="G" FontSize="36" TextColor="{StaticResource SecondaryLightBlue}" FontFamily="CoinyRegular"/>
                        <Span Text="I" FontSize="36" TextColor="{StaticResource SecondaryBlue}" FontFamily="CoinyRegular"/>
                        <Span Text="" FontSize="36" TextColor="{StaticResource SecondaryGreen}" FontFamily="CoinyRegular"/>
                        <Span Text="" FontSize="36" TextColor="{StaticResource PrimaryRed}" FontFamily="CoinyRegular"/>
                        <Span Text="" FontSize="36" TextColor="{StaticResource SecondaryLightBlue}" FontFamily="CoinyRegular"/>
                        <Span Text="" FontSize="36" TextColor="{StaticResource SecondaryGreen}" FontFamily="CoinyRegular"/>
                        <Span Text="" FontSize="36" TextColor="{StaticResource SecondaryLightBlue}" FontFamily="CoinyRegular"/>
                        <Span Text="" FontSize="36" TextColor="{StaticResource PrimaryRed}" FontFamily="CoinyRegular"/>
                        <Span Text="" FontSize="36" TextColor="{StaticResource SecondaryLightBlue}" FontFamily="CoinyRegular"/>
                        <Span Text="" FontSize="36" TextColor="{StaticResource SecondaryLightBlue}" FontFamily="CoinyRegular"/>
                        <Span Text="" FontSize="36" TextColor="{StaticResource SecondaryLightBlue}" FontFamily="CoinyRegular"/>
                    </FormattedString>
                </Label.FormattedText>
            </Label>
        </Grid>

        <Grid Grid.Row="1" RowDefinitions="60,auto,*" ColumnDefinitions="*" RowSpacing="10">

            <ContentView Grid.Row="0" >
                <views:GameStatusBar />
            </ContentView>

            <!-- [Header: Abbie Vance] -->
            <!-- One Row / Two Columns -->
            <!--<Grid RowDefinitions="*" ColumnDefinitions="*,*" Row="0" Padding="16,4" BackgroundColor="{StaticResource Primary}">
                <HorizontalStackLayout Grid.ColumnSpan="2" VerticalOptions="Center" Margin="0,0,0,0">
                    <Label
                    Text="{Binding Score}"
                    TextColor="{StaticResource OffWhite2}"
                    FontSize="40"
                    Margin="0,0,4,0"
                    FontFamily="ConcertOneRegular"
                    />
                    <Label
                    Text="points"
                    TextColor="{StaticResource OffWhite2}"
                    FontSize="24"
                    Margin="0,0,0,4"
                    Opacity="0.8"
                    VerticalOptions="End"
                    FontFamily="ConcertOneRegular"/>
                </HorizontalStackLayout>

                <HorizontalStackLayout Grid.Column="1" HorizontalOptions="End" VerticalOptions="Center" Margin="0,0,0,0">
                    <Label
                    VerticalOptions="End"
                    TextColor="{StaticResource OffWhite2}"
                    Text="round"
                    Opacity="0.8"
                    FontSize="24"
                    Margin="0,0,4,4"
                    FontFamily="ConcertOneRegular"/>

                    <Label
                    VerticalOptions="End"
                    Margin="0"
                    TextColor="{StaticResource OffWhite2}"
                    Text="{Binding RoundNumber}"
                    FontSize="40"
                    FontFamily="ConcertOneRegular"
                />
                </HorizontalStackLayout>
            </Grid>-->

            <!-- [Guesser / Prioritize Label: Priscilla Harris] -->
            <!-- One Row / Three Columns -->
            <Grid Row="1" RowDefinitions="*" ColumnDefinitions="*,*,*" Margin="16,16" VerticalOptions="Center">
                <HorizontalStackLayout Grid.Column="0" VerticalOptions="Center">
                    <toolkit:AvatarView
                        Margin="0,5,20,0"
                        CornerRadius="100"
                        HeightRequest="70"
                        HorizontalOptions="Center"
                        ImageSource="{Binding PlayerImage}"
                        VerticalOptions="Center"
                        WidthRequest="70" />

                    <VerticalStackLayout Grid.Column="1" VerticalOptions="End">
                        <Label
                            Text="Guessing Priorities for"
                            TextColor="{StaticResource DarkGray}"
                            Opacity="0.7"
                            HorizontalOptions="Center"
                            Margin="0,0,0,10"
                            FontSize="20"
                            FontFamily="ConcertOneRegular"
                            IsVisible="{Binding Guessing}"/>
                        <Label
                            Text="Submitting Priorities for"
                            TextColor="{StaticResource DarkGray}"
                            Opacity="0.7"
                            HorizontalOptions="Center"
                            Margin="0,0,0,10"
                            FontSize="20"
                            FontFamily="ConcertOneRegular"
                            IsVisible="{Binding Prioritizing}"/>
                        <Label
                            TextColor="{StaticResource DarkGray}"
                            Text="{Binding PlayerName}"
                            FontSize="36"
                            HorizontalOptions="Start"
                            FontFamily="ConcertOneRegular"
                            ></Label>
                    </VerticalStackLayout>

                </HorizontalStackLayout>

                

            </Grid>


            <Image Grid.Row="2" Grid.RowSpan="1" Grid.ColumnSpan="3" Source="shapes"  Margin="0,-40" VerticalOptions="EndAndExpand" />

            <!-- [Priority Cards Section: Priscilla Harris] -->
            <!-- Six Rows / Two Columns -->
            <Grid Row="2" RowDefinitions="*,*,*,*,*,*,auto" ColumnDefinitions="0.2*,0.8*" ColumnSpacing="8" Margin="16,0" >

                <!-- Priority Rank Numbers -->
                <CollectionView Grid.Column="0" Grid.RowSpan="5" >
                    <CollectionView.ItemsSource>
                        <x:Array Type="{x:Type x:Int32}">
                            <x:Int32>1</x:Int32>
                            <x:Int32>2</x:Int32>
                            <x:Int32>3</x:Int32>
                            <x:Int32>4</x:Int32>
                            <x:Int32>5</x:Int32>

                        </x:Array>
                    </CollectionView.ItemsSource>
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="models:Priority">
                            <Grid >
                                <Button
                                    CornerRadius="30"
                                    HeightRequest="60"
                                    WidthRequest="60"
                                    BackgroundColor="{StaticResource PrimaryBlueGreen}"
                                    Text="{Binding .}"
                                    TextColor="{StaticResource OffWhite2}"
                                    FontSize="30"
                                    VerticalOptions="Center"
                                    Margin="0, 8"
                                    IsEnabled="False"
                                    FontFamily="ConcertOneRegular"
                                    ZIndex="5"
                                    />
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <!-- Priority Cards -->
                <VerticalStackLayout Grid.RowSpan="5" Grid.Column="1">

                    <CollectionView
            Grid.Row="0"
            Margin="0,0,0,0"
            ItemsSource="{Binding Priorities}"
            SelectionMode="None">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="models:Priority">
                                <Frame
                                    Padding="3"
                                    BorderColor="Transparent"
                                    BackgroundColor="Transparent"
                                    IsClippedToBounds="True"
                                     Margin="0, 4">
                                    <VerticalStackLayout>
                                        <Border>
                                            <Border.StrokeShape>
                                                <RoundRectangle CornerRadius="16" />
                                            </Border.StrokeShape>

                                            <StackLayout
                                            Padding="10"
                                            HeightRequest="60"
                                            
                                            HorizontalOptions="FillAndExpand"
                                            Orientation="Horizontal"
                                            VerticalOptions="FillAndExpand"
                                             BackgroundColor="{StaticResource Secondary}">

                                            <Label
                                            x:Name="Priority"
                                            HorizontalOptions="FillAndExpand"
                                            
                                                
                                            Text="{Binding Thing}"
                                            TextColor="{StaticResource OffWhite2}"
                                            VerticalTextAlignment="Center"
                                            HorizontalTextAlignment="Center"
                                             FontFamily="ConcertOneRegular"
                                             FontSize="30"/>

                                            <!-- I got this off the internet-->
                                        <!-- https://github.com/Alam-Ashraf/MAUIDragDropCollectionViewItemsDemo -->
                                            <StackLayout.GestureRecognizers>
                                                <DragGestureRecognizer
                                        CanDrag="True"
                                        DragStartingCommand="{Binding BindingContext.ItemDraggedCommand, Source={x:Reference MainPageContainer}}"
                                        DragStartingCommandParameter="{Binding}" />
                                                <DropGestureRecognizer
                                        AllowDrop="True"
                                        DragLeaveCommand="{Binding BindingContext.ItemDragLeaveCommand, Source={x:Reference MainPageContainer}}"
                                        DragLeaveCommandParameter="{Binding}"
                                        DragOverCommand="{Binding BindingContext.ItemDraggedOverCommand, Source={x:Reference MainPageContainer}}"
                                        DragOverCommandParameter="{Binding}"
                                        DropCommand="{Binding BindingContext.ItemDroppedCommand, Source={x:Reference MainPageContainer}}"
                                        DropCommandParameter="{Binding}" />
                                            </StackLayout.GestureRecognizers>
                                        </StackLayout>
                                        </Border>

                                    </VerticalStackLayout>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                </VerticalStackLayout>


                <Border
                    BackgroundColor="{StaticResource Primary}"
                    StrokeThickness="0"                 
                    Grid.ColumnSpan="3"
                    Grid.Column="0"
                    Grid.Row="5"
                    Margin="0,0,0,48"
                    HeightRequest="75">
                    <Border.Shadow>
                        <Shadow Brush="{StaticResource Black}"
                            Offset="2,4"
                            Radius="8"
                            Opacity="0.5" />
                    </Border.Shadow>

                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="16" />
                    </Border.StrokeShape>

                    <Grid ColumnDefinitions="*,*,*" Padding="10,0">
                        <Button
                            VerticalOptions="Center"
                            Grid.ColumnSpan="3"
                            Text="SUBMIT"
                            Command="{Binding NavigateToNextPageCommand}"
                            TextColor="{StaticResource OffWhite2}"
                            FontSize="32"
                        
                            FontFamily="ConcertOneRegular"/>
                    </Grid>
                </Border>
            </Grid>

        </Grid>
    </Grid>
</ContentPage>