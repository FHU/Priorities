<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Priorities.Views.GamePage"
             Shell.FlyoutBehavior="Flyout"
             Shell.BackgroundColor="#3C3C3C"
             xmlns:viewmodels="clr-namespace:Priorities.ViewModels"
             xmlns:models="clr-namespace:Priorities.Models"
             x:DataType="viewmodels:GamePageViewModel"
             Title="GamePage"
             BackgroundColor="{StaticResource OffWhite}">

    <!-- Grid wrapper for the entire game page -->

    <Grid RowDefinitions="0.10*,0.13*,0.77*" ColumnDefinitions="*" RowSpacing="10" Background="{StaticResource OffWhite}">

        <!-- [Header: Abbie Vance] -->
        <!-- One Row / Two Columns -->
        <Grid RowDefinitions="*" ColumnDefinitions="*,*" Row="0" Padding="10,0" BackgroundColor="{StaticResource Primary}">
            <HorizontalStackLayout Grid.ColumnSpan="2" VerticalOptions="End" Margin="0,0,0,5">
                <Label
                    Text="{Binding Score}"
                TextColor="{StaticResource OffWhite2}"
                    FontSize="40"
                    Margin="0,0,10,0"
                    FontFamily="ConcertOneRegular"
                    />
                <Label
                    Text="points"
                TextColor="{StaticResource OffWhite2}"
                    FontSize="24"
                    VerticalOptions="End"
                    FontFamily="ConcertOneRegular"/>
            </HorizontalStackLayout>

            <HorizontalStackLayout Grid.Column="1" HorizontalOptions="End" VerticalOptions="End" Margin="0,0,0,5">
                <Label
                    VerticalOptions="End"
                TextColor="{StaticResource OffWhite2}"
                    Text="round"
                    FontSize="24"
                    Margin="0,0,10,0"
                    FontFamily="ConcertOneRegular"/>

                <Label
                    VerticalOptions="End"
                TextColor="{StaticResource OffWhite2}"
                    Text="{Binding RoundNumber}"
                    FontSize="40"
                    FontFamily="ConcertOneRegular"
                />
            </HorizontalStackLayout>
        </Grid>

        <!-- [Guesser / Prioritize Label: Priscilla Harris] -->
        <!-- One Row / Three Columns -->
        <Grid Row="1" RowDefinitions="*" ColumnDefinitions="*,*,*" Margin="10,0" VerticalOptions="Center">
            <HorizontalStackLayout Grid.Column="0" VerticalOptions="Center">
                <Frame
                   HeightRequest="70"
                   WidthRequest="70"
                   CornerRadius="35"
                   VerticalOptions="Center"
                   IsClippedToBounds="True"
                   Margin="0,0,20,0">
                    <Image
                        Aspect="AspectFit"
                        Source="{Binding PlayerImage}"
                        SemanticProperties.Description="Cute dot net bot waving hi to you!"
                        HeightRequest="70"
                        WidthRequest="70"
                        VerticalOptions="Center"
                        HorizontalOptions="Center" />
                </Frame>
                <VerticalStackLayout Grid.Column="1" VerticalOptions="End">
                    <Label
                    Text="Guessing Priorities for"
                    TextColor="{StaticResource Gray400}"
                    HorizontalOptions="Center"
                    Margin="0,0,0,10"
                    FontSize="20"
                    FontFamily="ConcertOneRegular"
                    />
                    <Label
                    Text="{Binding PlayerName}"
                    FontSize="36"
                    HorizontalOptions="Start"
                    FontFamily="ConcertOneRegular"
                    ></Label>
                </VerticalStackLayout>

            </HorizontalStackLayout>

            <Button
            Grid.Column="2"
            Text="{Binding Timer}"
            BackgroundColor="{StaticResource White}"
            CornerRadius="100"
            HorizontalOptions="End"
            VerticalOptions="End"
            FontSize="24"
            IsEnabled="False"
            FontFamily="ConcertOneRegular">
            <Button.Shadow>
                <Shadow Brush="Gray"
                Offset="0,20"
                Radius="15"
                Opacity="0.6"/>


            </Button.Shadow>

            </Button>
 
        </Grid>


        <Image Grid.Row="3" Grid.RowSpan="1" Grid.ColumnSpan="3" Source="shapes.jpg" Margin="0,-40" VerticalOptions="EndAndExpand"/>

        <!-- [Priority Cards Section: Priscilla Harris] -->
        <!-- Six Rows / Two Columns -->
        <Grid Row="2" RowDefinitions="*,*,*,*,*,*,*" ColumnDefinitions="0.20*,0.75*, 0.05*" ColumnSpacing="9" Margin="20,0">

            <!-- Priority Rank Numbers -->

            <Button
                CornerRadius="30"
                HeightRequest="60"
                WidthRequest="60"
                Grid.Column="0"
                Grid.Row="0"
                BackgroundColor="{StaticResource PrimaryBlueGreen}"
                Text="1"
                TextColor="{StaticResource OffWhite2}"
                FontSize="30"
                VerticalOptions="Center"
                IsEnabled="False"
                FontFamily="ConcertOneRegular"
            />

            <Button
                CornerRadius="30"
                HeightRequest="60"
                WidthRequest="60"
                Grid.Column="0"
                Grid.Row="1"
                BackgroundColor="{StaticResource PrimaryBlueGreen}"
                TextColor="{StaticResource OffWhite2}"
                Text="2"
                FontSize="30"
                VerticalOptions="Center"
                IsEnabled="False"
                FontFamily="ConcertOneRegular"
            />

            <Button
                CornerRadius="30"
                HeightRequest="60"
                WidthRequest="60"
                Grid.Column="0"
                Grid.Row="2"
                BackgroundColor="{StaticResource PrimaryBlueGreen}"
                TextColor="{StaticResource OffWhite2}"
                Text="3"
                FontSize="30"
                VerticalOptions="Center"
                IsEnabled="False"
                FontFamily="ConcertOneRegular"
            />

            <Button
                CornerRadius="30"
                HeightRequest="60"
                WidthRequest="60"
                Grid.Column="0"
                Grid.Row="3"
                BackgroundColor="{StaticResource PrimaryBlueGreen}"
                TextColor="{StaticResource OffWhite2}"
                Text="4"
                FontSize="30"
                VerticalOptions="Center"
                IsEnabled="False"
                FontFamily="ConcertOneRegular"
            />

            <Button
                CornerRadius="30"
                HeightRequest="60"
                WidthRequest="60"
                Grid.Row="4"
                BackgroundColor="{StaticResource PrimaryBlueGreen}"
                TextColor="{StaticResource OffWhite2}"
                Text="5"
                FontSize="30"
                VerticalOptions="Center"
                IsEnabled="False"
                FontFamily="ConcertOneRegular"
            />

            <!-- Priority Cards -->
            <CollectionView Grid.RowSpan="5" Grid.Column="1"
                ItemsSource="{Binding Priorities}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Priority">
                        <Button
                        CornerRadius="20"
                        Text="{Binding Thing}"
                        BackgroundColor="{StaticResource PrimaryBlueGreen}"
                    TextColor="{StaticResource OffWhite2}"
                        Margin="0, 9"
                        HeightRequest="60"
                        FontSize="30"
                        FontFamily="ConcertOneRegular">

                        </Button>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Frame 
                BackgroundColor="{StaticResource Primary}"
                BorderColor="Transparent"
                Grid.ColumnSpan="3"
                Grid.Column="0"
                CornerRadius="20"
                Grid.Row="5"
                Margin="0,40,0,0"
                HeightRequest="75">
                <Grid ColumnDefinitions="*,*,*" Padding="10,0">
                    <Label
                        Grid.Column="1"
                        Text="Submit"
                    TextColor="{StaticResource OffWhite2}"
                        FontSize="32"
                        FontFamily="ConcertOneRegular"/>
                    <Label
                        Grid.Column="2"
                        Text="➜"
                        TextColor="{StaticResource OffWhite2}"
                        HorizontalOptions="End"
                        FontSize="32"
                        FontFamily="ConcertOneRegular"/>
                </Grid>
                <Frame.Shadow>
                    <Shadow Brush="Gray"
                    Offset="0,20"
                    Radius="15"
                    Opacity="0.6"/>


                </Frame.Shadow>

            </Frame>
        </Grid>



    </Grid>
</ContentPage>