<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Priorities.Views.GamePage"
             Shell.FlyoutBehavior="Flyout"
             xmlns:viewmodels="clr-namespace:Priorities.ViewModels"
             xmlns:models="clr-namespace:Priorities.Models"
             x:DataType="viewmodels:GamePageViewModel"
             Title="GamePage">
    
    <!-- DIRECTIONS: Do the section under your name. It will be very helpful to reference back to our FACADE apps for this assignment.
    PLEASE reference our GamePage XAML Planning JIRA card and both ours and Casey's UI Design Cards -->
    
    <!-- Grid wrapper for the entire game page -->
    
    <Grid RowDefinitions="0.15*,0.15*,0.60*,0.10*" ColumnDefinitions="*" RowSpacing="10"> <!-- Four Rows / One Column -->
        
        <!-- TODO [Header: Abbie Vance] --> <!-- One Row / Three Columns -->
        <Grid Row="0" BackgroundColor="#dddddd">

            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>



                <HorizontalStackLayout Grid.Column="0" VerticalOptions="Center">
                <Frame
                   HeightRequest="70"
                   WidthRequest="70"
                   CornerRadius="70"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   IsClippedToBounds="True"
                   Padding="0"
                   BorderColor="Gray"
                   Margin="20,0,20,0">
                        <Image
                        Aspect="AspectFit"
                        Source="{Binding PlayerImage}"
                        SemanticProperties.Description="Cute dot net bot waving hi to you!"
                        HeightRequest="70"
                        WidthRequest="70"
                        VerticalOptions="Center"
                        HorizontalOptions="Center" />
                </Frame>
                <Label
                    Text="{Binding PlayerName}"
                    FontSize="24"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    ></Label>
            </HorizontalStackLayout>

            

            <VerticalStackLayout
                Padding="0, 0, 50, 0"
                Grid.Column="1"
                VerticalOptions="Center">
                <Label
                VerticalOptions="Center"
                    HorizontalOptions="End"
                Text="Score"
                ></Label>

                <Label
                VerticalOptions="Center"
                    HorizontalOptions="End"
                Text="0"
                FontSize="30"
                ></Label>
            </VerticalStackLayout>




        </Grid>

        <!-- TODO [Guesser / Prioritize Label: Priscilla Harris] --> <!-- Two Rows / One Column -->
        <Grid Row="1" RowDefinitions="*,*" Margin="0,10">
            <Label
            Grid.Row="0"
            Text="Guess the Priorities"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            FontSize="20"
            />

            <Label
            Grid.Row="1"
            Text="0:59"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            FontSize="30"
            />
        </Grid>
        
        <!-- TODO [Priority Cards Section: Priscilla Harris] --> <!-- Six Rows / Two Columns -->
        <Grid Row="2" RowDefinitions="*,*,*,*,*,*" ColumnDefinitions="0.10*,0.90*" Margin="50, 0" RowSpacing="10" ColumnSpacing="20">

            <!-- Priority Rank Numbers -->
            <Label
            Grid.Column="0"
            Grid.Row="0"
            Text="1"
            FontSize="30"
            VerticalOptions="Center"
            />
            
            <Label
            Grid.Column="0"
            Grid.Row="1"
            Text="2"
            FontSize="30"
            VerticalOptions="Center"
            />
            
            <Label
            Grid.Column="0"
            Grid.Row="2"
            Text="3"
            FontSize="30"
            VerticalOptions="Center"
            />
            
            <Label
            Grid.Column="0"
            Grid.Row="3"
            Text="4"
            FontSize="30"
            VerticalOptions="Center"
            />
            
            <Label
            Grid.Column="0"
            Grid.Row="4"
            Text="5"
            FontSize="30"
            VerticalOptions="Center"
            />
            
            <!-- Priority Cards -->
            <CollectionView Grid.Row="0"
                 HeightRequest="125"
                 ItemsSource="{Binding Priorities}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Priority">
                        <Button
                        Text="{Binding Thing}"/>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Button
            Grid.ColumnSpan="2"
            Grid.Column="0"
            Grid.Row="5"
            Text="Submit"
            FontSize="20"
            HeightRequest="55"
            Margin="0, 20, 0, 0"
           
            />

        </Grid>
        
        <!-- TODO [Footer: Gavin Boler] --> <!-- One Row -->
        <Grid Row="3" RowDefinitions="*" ColumnDefinitions="*" BackgroundColor="#dddddd" Margin="0,15,0,0">


            <Label
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    Text="Round 1/8"
                    FontSize="15"
                />
        </Grid>
    </Grid>
</ContentPage>