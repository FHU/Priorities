                        </FlexLayout>

                    </Frame>
                </FlexLayout>
                
                
                
                
                
            </ScrollView>



            <Button
        Margin="10"
        TextColor="White"
        Text="Add New Player"
        HorizontalOptions="Center" 
                FontSize="25"
                BackgroundColor="OrangeRed"
                Padding="15"
                CornerRadius="20"
                WidthRequest="250"
                />

            <Button
        Margin="10"
        TextColor="White"
        Text="Play!"
        HorizontalOptions="Center" 
                FontSize="25"
                BackgroundColor="Blue"
                Padding="15"
                CornerRadius="20"
                WidthRequest="250"
               
                />

        </VerticalStackLayout>
