            <Label
            Text="Priorities"
            TextColor="White"
            HorizontalTextAlignment="Center"
            FontSize="48"
            BackgroundColor="Black"
            HorizontalOptions="Fill"
                Padding="15"/>

            <Label
            Margin="20"
            TextColor="Black"
            Text="Players"
            FontSize="32"
            HorizontalOptions="Center" />


