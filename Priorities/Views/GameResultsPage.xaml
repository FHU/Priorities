        <VerticalStackLayout Grid.Row="3">
            <Button
                Margin="70,-60,70,0"
                Padding="0"
                BackgroundColor="{StaticResource PrimaryRed}"
                Command="{Binding NavigateToPlayersPageCommand}"
                CornerRadius="20"
                FontFamily="ConcertOne-Regular"
                FontSize="36"
                HeightRequest="165"
                HorizontalOptions="FillAndExpand"
                LineBreakMode="NoWrap"
                Text="PLAY AGAIN"
                TextColor="White">
                <Button.Shadow>
                    <Shadow
                        Brush="{StaticResource Gray400}"
                        Opacity="0.5"
                        Radius="15"
                        Offset="10,10" />
                </Button.Shadow>
            </Button>

            <Button
                Margin="70,10,70,0"
                Padding="0"
                BackgroundColor="{StaticResource PrimaryBlueGreen}"
                Command="{Binding NavigateToHighScorePageCommand}"
                CornerRadius="20"
                FontFamily="ConcertOne-Regular"
                FontSize="28"
                HeightRequest="60"
                HorizontalOptions="FillAndExpand"
                LineBreakMode="NoWrap"
