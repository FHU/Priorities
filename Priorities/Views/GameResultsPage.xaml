<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Priorities.Views.GameResultsPage"
             Title="GameResultsPage">
                
             
    
    <VerticalStackLayout HorizontalOptions="Center"
                         BackgroundColor="White">

        <HorizontalStackLayout HorizontalOptions="Center">
            <VerticalStackLayout>
                <Label
               
                TextColor="{StaticResource Primary}"
                Margin="0, 0, 130, 0"
                FontSize="30"
                FontFamily="CoinyRegular"
                Text="Time"/>

                <Label
                HorizontalOptions="Center"
                TextColor="{StaticResource Black}"
                Margin="0, 0, 140, 5"
                FontSize="Large"
                FontFamily="CoinyRegular"
                Text="{Binding ElapsedTime.Minutes}"/>
            </VerticalStackLayout>
            
            <VerticalStackLayout>
                <Label
                HorizontalOptions="Center"
                Text="Score"
               TextColor="{StaticResource Primary}"
                Margin="5, 0, 0, 5"
                FontSize="30"
                FontFamily="CoinyRegular"
            />

                <Label
                HorizontalOptions="Center"
                TextColor="{StaticResource Black}"
                Margin="5, 0, 0, 5"
                FontSize="Large"
                FontFamily="CoinyRegular"
                Text="{Binding Score}"/>
            </VerticalStackLayout>

        </HorizontalStackLayout>

        <VerticalStackLayout
            HeightRequest="300">
            <Label
            Margin="0,35,0,15"
            Text="Achievements"
            HorizontalOptions="Center"
            FontFamily="CoinyRegular"
            TextColor="{StaticResource Primary}"
            FontSize="Large"/>


            <Button
                Margin="0,10,0,0"
                WidthRequest="250"
                HeightRequest="50"
                BackgroundColor="{StaticResource Secondary}"
                Text="Fastest Man Alive"
                TextColor="{StaticResource White}"
                FontSize="Medium">

                <Button.Shadow>
                    <Shadow
                        Opacity="0.2"
                        Offset="10,10"
                        Radius="10"
                        
                        />
                </Button.Shadow>
                
            </Button>



            <Button
                Margin="0,10,0,0"
                WidthRequest="250"
                HeightRequest="50"
                BackgroundColor="{StaticResource Secondary}"
                Text="Great Start"
                TextColor="{StaticResource White}"
                FontSize="Medium">

                <Button.Shadow>
                    <Shadow
                        Opacity="0.2"
                        Offset="10,10"
                        Radius="10"
                        
                        />
                </Button.Shadow>
            </Button>

            <Button
                Margin="0,10,0,0"
                WidthRequest="250"
                HeightRequest="50"
                BackgroundColor="{StaticResource Secondary}"
                Text="Snail's Pace"
                TextColor="{StaticResource White}"
                FontSize="Medium">

                <Button.Shadow>
                    <Shadow
                        Opacity="0.2"
                        Offset="10,10"
                        Radius="10"
                        
                        />
                </Button.Shadow>
            </Button>
        </VerticalStackLayout>



        <VerticalStackLayout>
            <Button Margin="0,0,0,5" Padding="0,12" Text="High Score" VerticalOptions="Center" FontFamily="CoinyRegular" WidthRequest="220" HeightRequest="50" TextColor="{StaticResource White}" BackgroundColor="{StaticResource Primary}">
                <Button.Shadow>
                    <Shadow
                        Opacity="0.2"
                        Offset="10,10"
                        Radius="10"
                        
                        />
                </Button.Shadow>
            </Button>
            <Button Margin="0,0,0,5" Text="Achivements" VerticalOptions="Center" FontFamily="CoinyRegular" WidthRequest="220" HeightRequest="50" TextColor="{StaticResource White}" BackgroundColor="{StaticResource Primary}">
                <Button.Shadow>
                    <Shadow
                        Opacity="0.2"
                        Offset="10,10"
                        Radius="10"
                        
                        />
                </Button.Shadow>
            </Button>
            <Button Text="Play Again" VerticalOptions="Center" FontSize="20" FontFamily="CoinyRegular" WidthRequest="250" HeightRequest="50" TextColor="{StaticResource White}" BackgroundColor="{StaticResource Primary}">
                <Button.Shadow>
                    <Shadow
                        Opacity="0.2"
                        Offset="10,10"
                        Radius="10"
                        
                        />
                </Button.Shadow>
            </Button>
        </VerticalStackLayout>

        
            <Image  Source="shapes.jpg" WidthRequest="300"/>
        

    </VerticalStackLayout>
</ContentPage>
