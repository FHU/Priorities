                BackgroundColor="{StaticResource PrimaryRed}"
                HeightRequest="60"
                FontSize="25"
                TextColor="White"
                FontFamily="CoinyRegular"
                CornerRadius="20">
                <Button.Shadow>
                    <Shadow Opacity="0.5"
                    Radius="15"
                    Offset="10,10"
                    Brush="{StaticResource Gray400}"
                    />
