<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Priorities.Views.GameResultsPage"
             Title="GameResultsPage"
             BackgroundColor="{StaticResource OffWhite}"
             xmlns:viewmodels="clr-namespace:Priorities.ViewModels"

             >
             
                
             
    
    <VerticalStackLayout HorizontalOptions="Center"
                         BackgroundColor="{StaticResource OffWhite}">

        <HorizontalStackLayout HorizontalOptions="Center">
            <VerticalStackLayout>
                <Label
               
                TextColor="#EC6664"
                Margin="5, 5, 130, 0"
                FontSize="Medium"
                FontAttributes="Bold"
                Text="Time"/>

                <HorizontalStackLayout>
                    <Label
                HorizontalOptions="Center"
                TextColor="Black"
                Margin="5, 5, 0, 0"
                FontSize="Large"
                FontAttributes="Bold"
                Text="{Binding ElapsedTime.Minutes}"/>

                    <Label
                HorizontalOptions="Center"
                TextColor="Black"
                Margin="5, 5, 0, 0"
                FontSize="Large"
                FontAttributes="Bold"
                Text=":"/>

                    <Label
                HorizontalOptions="Center"
                TextColor="Black"
                Margin="5, 5, 0, 0"
                FontSize="Large"
                FontAttributes="Bold"
                Text="{Binding ElapsedTime.Seconds}"/>
                </HorizontalStackLayout>

            </VerticalStackLayout>
            
            <VerticalStackLayout>
                <Label
                HorizontalOptions="Center"
                Text="Score"
               TextColor="#EC6664"
                Margin="5, 5, 5, 5"
                FontSize="Medium"
                FontAttributes="Bold"
            />

                <Label
                HorizontalOptions="Center"
                TextColor="Black"
                Margin="0, 0, 5, 0"
                FontSize="Large"
                FontAttributes="Bold"
                Text="{Binding Score}"/>
            </VerticalStackLayout>

        </HorizontalStackLayout>

        <VerticalStackLayout
            HeightRequest="300">
            <Label
            Margin="0,10,0,10"
            Text="Achievements"
            HorizontalOptions="Center"
            TextColor="#EC6664"
            FontSize="Large"/>


            <CollectionView ItemsSource="{Binding Achievements}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="20, 5, 20, 5" Padding="0" CornerRadius="10" BorderColor="Transparent" >
                            <FlexLayout Direction="Row" BackgroundColor="#087E8B" JustifyContent="SpaceBetween" AlignItems="Center" WidthRequest="250" HeightRequest="60">

                                <Label   Text="{Binding Title}" FontSize="25" TextColor="White" HorizontalTextAlignment="Center"/>
                                



                            </FlexLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>



        <VerticalStackLayout>
            <Button Margin="0,0,0,10" Text="High Score" FontSize="Medium" FontAttributes="Bold" WidthRequest="220" HeightRequest="50" TextColor="White" BackgroundColor="#EC6664">
                <Button.Shadow>
                    <Shadow
                        Opacity="0.2"
                        Offset="10,10"
                        Radius="10"
                        
                        />
                </Button.Shadow>
            </Button>
            <Button Margin="0,0,0,10" Text="Achivements" FontSize="Medium" FontAttributes="Bold" WidthRequest="220" HeightRequest="50" TextColor="White" BackgroundColor="#EC6664">
                <Button.Shadow>
                    <Shadow
                        Opacity="0.2"
                        Offset="10,10"
                        Radius="10"
                        
                        />
                </Button.Shadow>
            </Button>
            <Button Text="Play Again" FontSize="Medium" FontAttributes="Bold" WidthRequest="250" HeightRequest="60" TextColor="White" BackgroundColor="#EC6664">
                <Button.Shadow>
                    <Shadow
                        Opacity="0.2"
                        Offset="10,10"
                        Radius="10"
                        
                        />
                </Button.Shadow>
            </Button>
        </VerticalStackLayout>

        
            <Image  Source="Flower.jpg" />
        

    </VerticalStackLayout>
</ContentPage>
