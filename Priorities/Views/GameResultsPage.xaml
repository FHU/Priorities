<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Priorities.Views.GameResultsPage"
             Title="GameResultsPage">
                
             
    
    <VerticalStackLayout HorizontalOptions="Center"
                         BackgroundColor="White">

        <HorizontalStackLayout HorizontalOptions="Center">
            <VerticalStackLayout>
                <Label
                HorizontalOptions="Center"
                TextColor="Black"
                Margin="5, 5, 40, 5"
                FontSize="Small"
                Text="Time"/>

                <Label
                HorizontalOptions="Center"
                TextColor="Black"
                Margin="5, 5, 40, 5"
                FontSize="Large"
                Text="{Binding ElapsedTime}"/>
            </VerticalStackLayout>
            
            <VerticalStackLayout>
                <Label
                HorizontalOptions="Center"
                Text="Score"
               TextColor="Black"
                Margin="5, 5, 40, 5"
                FontSize="Small"
            />

                <Label
                HorizontalOptions="Center"
                TextColor="Black"
                Margin="5, 5, 40, 5"
                FontSize="Large"
                Text="{Binding Score}"/>
            </VerticalStackLayout>

        </HorizontalStackLayout>

        <VerticalStackLayout
            HeightRequest="300">
            <Label
            Margin="0,50,0,0"
            Text="Achivements"
            HorizontalOptions="Center"
            TextColor="#EC6664"
            FontSize="Large"/>

            <Button
                Margin="0,10,0,0"
                WidthRequest="250"
                HeightRequest="50"
                BackgroundColor="#087E8B"
                Text="Great Start"
                TextColor="White"
                FontSize="Large">
            </Button>

            <Button
                Margin="0,10,0,0"
                WidthRequest="250"
                HeightRequest="50"
                BackgroundColor="#087E8B"
                Text="Great Start"
                TextColor="White"
                FontSize="Large">
            </Button>
        </VerticalStackLayout>



        <VerticalStackLayout>
            <Button Margin="0,0,0,5" Text="High Score" FontSize="Medium" FontAttributes="Bold" WidthRequest="220" HeightRequest="50" TextColor="White" BackgroundColor="#EC6664">
            </Button>
            <Button Margin="0,0,0,5" Text="Achivements" FontSize="Medium" FontAttributes="Bold" WidthRequest="220" HeightRequest="50" TextColor="White" BackgroundColor="#EC6664">
            </Button>
            <Button Text="Play Again" FontSize="Medium" FontAttributes="Bold" WidthRequest="250" HeightRequest="50" TextColor="White" BackgroundColor="#EC6664">
            </Button>
        </VerticalStackLayout>

    </VerticalStackLayout>
</ContentPage>
