<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="Priorities.Views.AddPlayerPage"
             Shell.FlyoutBehavior="Flyout"
             xmlns:viewmodels="clr-namespace:Priorities.ViewModels"
             xmlns:models="clr-namespace:Priorities.Models"
             xmlns:views="clr-namespace:Priorities.Views"
             xmlns:cv="clr-namespace:Camera.MAUI;assembly=Camera.MAUI"
             x:DataType="viewmodels:AddPlayersPageViewModel"
             Title="AddPlayerPage"
             Shell.NavBarIsVisible="False"
             Shell.BackgroundColor="{StaticResource DarkGray}"
             BackgroundColor="{StaticResource OffWhite}"
             >

    <ContentPage.Behaviors>
        <toolkit:StatusBarBehavior StatusBarColor="{StaticResource DarkGray}"/>
    </ContentPage.Behaviors>

    <Grid RowDefinitions="80, *">
        <Grid Grid.Row="0" ColumnDefinitions="auto,auto,auto" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" BackgroundColor="{StaticResource DarkGray}" Margin="0,-5,0,0">
            <Button Text="☰"  BackgroundColor="Transparent" FontSize="40" VerticalOptions="Center" Margin="0,-16,0,0" Clicked="HamburgerMenuButton_Clicked"/>
            <Label Grid.Column="1" LineBreakMode="NoWrap" HorizontalOptions="Center" VerticalOptions="Center">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text=" " FontSize="40"/>
                        <Span Text="A" FontSize="40" TextColor="{StaticResource PrimaryRed}" FontFamily="CoinyRegular"/>
                        <Span Text="D" FontSize="40" TextColor="{StaticResource SecondaryGreen}" FontFamily="CoinyRegular"/>
                        <Span Text="D" FontSize="40" TextColor="{StaticResource SecondaryLightBlue}" FontFamily="CoinyRegular"/>
                        <Span Text=" " FontSize="40"/>
                        <Span Text="P" FontSize="40" TextColor="{StaticResource SecondaryGreen}" FontFamily="CoinyRegular"/>
                        <Span Text="L" FontSize="40" TextColor="{StaticResource PrimaryRed}" FontFamily="CoinyRegular"/>
                        <Span Text="A" FontSize="40" TextColor="{StaticResource SecondaryLightBlue}" FontFamily="CoinyRegular"/>
                        <Span Text="Y" FontSize="40" TextColor="{StaticResource SecondaryGreen}" FontFamily="CoinyRegular"/>
                        <Span Text="E" FontSize="40" TextColor="{StaticResource SecondaryLightBlue}" FontFamily="CoinyRegular"/>
                        <Span Text="R" FontSize="40" TextColor="{StaticResource PrimaryRed}" FontFamily="CoinyRegular"/>
                    </FormattedString>
                </Label.FormattedText>
            </Label>
        </Grid>


        <Grid Grid.Row="1" Padding="0" BackgroundColor="{StaticResource White}">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="160"/>
            </Grid.RowDefinitions>

            <!--Main Section-->

            <!--Name Section-->
            <Grid Grid.Row="0" Padding="4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <!--Label Name-->
                <Frame Grid.Row="1"
                        HorizontalOptions="Center"
                        BackgroundColor="{StaticResource Secondary}"
                        WidthRequest="296"
                        HeightRequest="70"
                        CornerRadius="25"
                        BorderColor="Transparent">
                </Frame>
                <Label Grid.Row="0"
                       Padding="2"
                       Text="Name"
                       HorizontalOptions="Center"
                       FontSize="28"
                       FontFamily="CoinyRegular"
                       TextColor="{StaticResource Primary}"                       
                       FontAttributes="Bold"/>
                <!--Text box to input name-->
                <Entry Grid.Row="1"
                       HeightRequest="50"
                       WidthRequest="200"
                       MaxLength="15"
                       FontSize="24"
                       HorizontalTextAlignment="Center"
                       FontFamily="CoinyRegular"
                       FontAttributes="Bold"
                       TextColor="{StaticResource OffWhite}"
               
               BackgroundColor="{StaticResource Secondary}"
                />
            </Grid>

            <!--Input Avatar-->
            <Grid Grid.Row="1" RowSpacing="12" VerticalOptions="Center" Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>

                <Label Grid.Row="0"
                       Text="Avatar Pic"
                       HorizontalOptions="Center"
                       FontSize="28"
                       FontFamily="CoinyRegular"
                       FontAttributes="Bold"
                       TextColor="{StaticResource Primary}"/>

                <!--Avatar Pic-->
                
                <Frame Grid.Row="1"
                       HeightRequest="250"
                       WidthRequest="250"
                       CornerRadius="150"
                       HorizontalOptions="Center"
                       IsClippedToBounds="True"
                       Padding="2"
                       BorderColor="Transparent"
                       BackgroundColor="Transparent"
                       Margin="0,0,0,0">

                    <Image Grid.Row="1"
                       x:Name="avatarPic"
                       HeightRequest="250"
                       WidthRequest="250"
                       />

                </Frame>

                

                <Frame Grid.Row="1"
                       HeightRequest="250"
                       WidthRequest="250"
                       CornerRadius="150"
                       HorizontalOptions="Center"
                       IsClippedToBounds="True"
                       Padding="3"
                       BorderColor="Transparent"
                       BackgroundColor="Transparent"
                       Margin="0,0,0,0">

                    <cv:CameraView x:Name="cameraView" HeightRequest="250" WidthRequest="250"
                               CamerasLoaded="cameraView_CamerasLoaded"/>

                </Frame>


                <!--<Frame Grid.Row="2"
                       HeightRequest="300"
                       WidthRequest="300"
                       CornerRadius="150"
                       HorizontalOptions="Center"
                       IsClippedToBounds="True"
                       Padding="3"
                       BorderColor="Gray"
                       Margin="0,0,0,0">

                <cv:CameraView x:Name="cameraView" HeightRequest="200" WidthRequest="200"
                               CamerasLoaded="cameraView_CamerasLoaded"/>

                </Frame>-->

                <!--Retake Button-->
                <Button Grid.Row="2"
                        Text="RETAKE"
                        x:Name="retake"
                        Clicked="Button_Clicked_1"
                        CharacterSpacing="2"
                        FontSize="17"
                        FontAttributes="Bold"
                        FontFamily="CoinyRegular"
                        VerticalOptions="Center"
                        BackgroundColor= "{StaticResource Tertiary}"
                        CornerRadius="15"
                        HeightRequest="47"
                        WidthRequest="236"
                        TextColor="White">
                            <Button.Shadow>
                                <Shadow Opacity="0.5"
                                Radius="15"
                                Offset="10,10"
                                Brush="{StaticResource Gray400}"
                        />
                            </Button.Shadow>
                </Button>

                <!--Smile Button-->
                <Button Grid.Row="2"
                        Text="SMILE!"
                        x:Name="smile"
                        Clicked="Button_Clicked"
                        CharacterSpacing="2"
                        FontSize="20"
                        FontAttributes="Bold"
                        FontFamily="ConcertOneRegular"
                        VerticalOptions="Center"
                        BackgroundColor= "{StaticResource Tertiary}"
                        CornerRadius="15"
                        HeightRequest="47"
                        WidthRequest="236"
                        TextColor="White">
                            <Button.Shadow>
                                <Shadow Opacity="0.5"
                                Radius="15"
                                Offset="10,10"
                                Brush="{StaticResource Gray400}"
                        />
                            </Button.Shadow>
                </Button>

               
            </Grid>

            <!--Add Player Button-->
            <StackLayout Grid.Row="2" VerticalOptions="End">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <!--<RowDefinition Height="auto"/>-->
                    </Grid.RowDefinitions>

                    <Button Text="ADD PLAYER"
                            ImageSource="whiteadd.png"
                            FontFamily="ConcertOneRegular"
                            Grid.Row="0"
                            FontSize="32"
                            HeightRequest="80"
                            WidthRequest="296"
                            CornerRadius="25"
                            FontAttributes="Bold"
                            BackgroundColor="{StaticResource Primary}"
                            TextColor="{StaticResource White}">
                                <Button.Shadow>
                                    <Shadow Opacity="0.5"
                                        Radius="15"
                                        Offset="10,10"
                                        Brush="{StaticResource Gray400}"
                                    />
                                </Button.Shadow>
                    </Button>

                    <!--<Image Source="shapes.png"
                           Grid.Row="1"
                           VerticalOptions="End"
                           HeightRequest="180"
                           WidthRequest="200"
                           />-->
                </Grid>

            </StackLayout>

            <Image Source="shapes.png"
                   Aspect="AspectFill"
                   WidthRequest="400"
                   HeightRequest="180"
                   Grid.Row="3"
                   VerticalOptions="End"
                   ZIndex="-1"/>

            <!--Bottom Style-->
            <!--<StackLayout Grid.Row="3"
                        VerticalOptions="End">

                <Image Source="shapes.png"
                       WidthRequest="360"
                       HeightRequest=""/>

            </StackLayout>-->


        </Grid>


    </Grid>
    
    
    

    

</ContentPage>