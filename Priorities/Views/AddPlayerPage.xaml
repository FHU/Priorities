<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Priorities.Views.AddPlayerPage"
             Title="AddPlayerPage"
             Shell.FlyoutBehavior="Flyout">
    
    
    <ScrollView>
        <Grid Padding="0" RowSpacing="20" BackgroundColor="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            
            <!--Header-->
            <!--<Grid Grid.Row="1" ColumnSpacing="3" RowSpacing="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>

                <Button Grid.Row="0"
                        Grid.Column="0"
                        Text="Hamburger" />

                <Label Grid.Row="0"
                       Grid.Column="1"
                       Text="Add Player" />

                <Button Grid.Row="0"
                        Grid.Column="2"
                        Text="X" />
            </Grid>-->
            
        <!--Main Section-->
            
            <!--Name Section-->
            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                
                <!--Label Name-->
                <Label Grid.Row="0"
                       Text="Name"/>
                <!--Text box to input name-->
                <Label Grid.Row="1"
                       Text="Where we will add a text-box to input names" />
            </Grid>
            
            <!--Avatar-->
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>

                <Label Grid.Row="0"
                       Text="Avatar Pic" />

                <RoundRectangle Grid.Row="1"
                                Fill="#facade"
                                CornerRadius="48"
                                MaximumHeightRequest="150"/>
                <!--<Label Grid.Row="1"
                       Text="Where we will put the camera" />-->

                <Button Grid.Row="2"
                        Text="Retake" />
            </Grid>
            
            <!--Submit-->
            <StackLayout Grid.Row="2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>

                    <Button Text="AddPlayerButton"
                            Grid.Row="0"/>
                </Grid>

            </StackLayout>
                      
            
        </Grid>
    </ScrollView>
    
</ContentPage>