<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Priorities.Views.GetReadyPage"
             Title="GetReadyPage"
             BackgroundColor="White"
             xmlns:vm="clr-namespace:Priorities.ViewModels"
            
             Shell.FlyoutBehavior="Flyout"
             xmlns:viewmodels="clr-namespace:Priorities.ViewModels"
             xmlns:models="clr-namespace:Priorities.Models"
             x:DataType="viewmodels:GetReadyPageViewModel">

    <Grid Padding="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top Bar with App Name -->
        <Label Text="PRIORITIES"
               Grid.Row="0"
               HorizontalOptions="FillAndExpand"
               VerticalOptions="Center"
               BackgroundColor="#505050"
               FontSize="40"
               TextColor="White"
               HeightRequest="100"
               Padding="20,0"
               HorizontalTextAlignment="Center"
               VerticalTextAlignment="Center"/>

        <!-- Score and Round Number -->
        <!-- Score and Round Number -->
<Grid Grid.Row="1"
      HorizontalOptions="FillAndExpand"
      VerticalOptions="Center"
      BackgroundColor="#E57373"
      Margin="0"
      Padding="10">
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto"/>
        <ColumnDefinition Width="30"/> <!-- This column acts as the spacer -->
        <ColumnDefinition Width="Auto"/>
    </Grid.ColumnDefinitions>

    <Label Grid.Column="0"
           FontSize="36"
           TextColor="White"
           HorizontalTextAlignment="Center"
           VerticalTextAlignment="Center"
           Text="200 points"/>

    <!-- The empty column here serves as the space between the labels -->

    <Label Grid.Column="2"
           FontSize="24"
           TextColor="White"
           HorizontalTextAlignment="Center"
           VerticalTextAlignment="Center"
           Text="Round 1/10"/>
</Grid>


        <!-- Pass the Phone Header -->
        <Label Text="Pass the Phone to...."
               Grid.Row="2"
               Margin="20"
               HorizontalOptions="Center"
               FontSize="28"
               TextColor="Black"/>

         <!--User Profile and Name--> 
        <StackLayout Grid.Row="3"
                     HorizontalOptions="Center"
                     Spacing="20"
                     VerticalOptions="Center">
             <!--Circle Frame for Profile Picture Placeholder--> 
            <Frame WidthRequest="200"
                   HeightRequest="200"
                   CornerRadius="100"
                   BackgroundColor="LightGray"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   IsClippedToBounds="True">
                 <Image Source="{Binding CurrentPlayer.ImageName}"
                        Aspect="AspectFill"
                        WidthRequest="200"
                        HeightRequest="200"
                        />

            </Frame>
            <Label Text="{Binding CurrentPlayer.Name}" FontSize="36" TextColor="Black" HorizontalOptions="Center"/>
        </StackLayout>


        <!-- Ready Button -->
        <Button Text="READY?"
                Grid.Row="4"
                Margin="20"
                TextColor="White"
                BackgroundColor="#E57373"
                FontSize="30"
                CornerRadius="10"
                HorizontalOptions="FillAndExpand"/>

    </Grid>
</ContentPage>