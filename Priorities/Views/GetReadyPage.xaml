<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Priorities.Views.GetReadyPage"
             Title="GetReadyPage"
             BackgroundColor="White"
             xmlns:vm="clr-namespace:Priorities.ViewModels"
           
             Shell.FlyoutBehavior="Flyout"
             xmlns:viewmodels="clr-namespace:Priorities.ViewModels"
             xmlns:models="clr-namespace:Priorities.Models"
             x:DataType="viewmodels:GetReadyPageViewModel">

    <Grid Padding="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top Bar with App Name -->
        <Label Text="PRIORITIES"
               Grid.Row="0"
               HorizontalOptions="FillAndExpand"
               VerticalOptions="Center"
               BackgroundColor="#505050"
               FontSize="40"
               FontFamily="CoinyRegular"
               TextColor="White"
               HeightRequest="100"
               Padding="20,0"
               HorizontalTextAlignment="Center"
               VerticalTextAlignment="Center"/>

        <!-- Score and Round Number -->
        <!-- Score and Round Number -->
<Grid Grid.Row="1"
      HorizontalOptions="FillAndExpand"
      VerticalOptions="Center"
      BackgroundColor="#EC6664"
      Margin="0"
      Padding="10">
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto"/>
        <ColumnDefinition Width="30"/> <!-- This column acts as the spacer -->
        <ColumnDefinition Width="Auto"/>
    </Grid.ColumnDefinitions>

    <Label Grid.Column="0"
           FontSize="36"
           TextColor="White"
           HorizontalTextAlignment="Center"
           VerticalTextAlignment="Center"
           Text="200 points"
           FontFamily="CoinyRegular"/>


    <!-- The empty column here serves as the space between the labels -->

    <Label Grid.Column="2"
           FontSize="20"
           TextColor="White"
           HorizontalTextAlignment="Center"
           VerticalTextAlignment="Center"
           Text="Round 1/10"
           FontFamily="CoinyRegular"/>
</Grid>


        <!-- Pass the Phone Header -->
        <Label Text="Pass the Phone to...."
               FontFamily="CoinyRegular"
               Grid.Row="2"
               Margin="20"
               HorizontalOptions="Center"
               FontSize="24"
               TextColor="#404040"/>

         <!--User Profile and Name-->
        <StackLayout Grid.Row="3"
                     HorizontalOptions="Center"
                     Spacing="20"
                     VerticalOptions="Center">
             <!--Circle Frame for Profile Picture Placeholder-->
            <Frame WidthRequest="200"
                   HeightRequest="200"
                   CornerRadius="100"
                   BackgroundColor="LightGray"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   IsClippedToBounds="True">
                 <Image Source="Resources/Images/shannon.jpg"
                        Aspect="AspectFill"
                        WidthRequest="200"
                        HeightRequest="200"
                        />

            </Frame>

            <Frame WidthRequest="400"
                   HeightRequest="200"
                   TranslationY="80"
                   BorderColor="Transparent"
                   BackgroundColor="Transparent"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   IsClippedToBounds="True">
                 <Image Source="Resources/Images/shapes.jpg"
                        Aspect="AspectFill"
                        WidthRequest="400"
                        HeightRequest="200"
                        />

            </Frame>
            <Label Text="David Shannon" TranslationY="-245" FontSize="36" TextColor="#404040" HorizontalOptions="Center" FontFamily="CoinyRegular"/>
        </StackLayout>


        <!-- Ready Button -->
        <Button Text="READY?"
                Grid.Row="4"
                Margin="20"
                TranslationY="-110"
                TextColor="White"
                BackgroundColor="#EC6664"
                FontSize="30"
                FontFamily="CoinyRegular"
                CornerRadius="10"
                HorizontalOptions="FillAndExpand"/>

    </Grid>
</ContentPage>