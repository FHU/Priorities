<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Priorities.Views.GetReadyPage"
             BackgroundColor="#F1F1F1"
             xmlns:vm="clr-namespace:Priorities.ViewModels"
           
             Shell.FlyoutBehavior="Flyout"
             xmlns:viewmodels="clr-namespace:Priorities.ViewModels"
             xmlns:models="clr-namespace:Priorities.Models"
             x:DataType="viewmodels:GetReadyPageViewModel"
             Shell.NavBarIsVisible="False">
    

        <Grid Padding="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

        <!-- Top Bar with App Name -->
        <Label
                Grid.Column="1"
                HorizontalOptions="FillAndExpand"
                LineBreakMode="NoWrap"
                VerticalOptions="Center"
                BackgroundColor="#404040">
                <Label.FormattedText>
                    <FormattedString>
                        <Span
                            FontFamily="CoinyRegular"
                            FontSize="40"
                            Text="P"
                            TextColor="{StaticResource PrimaryRed}" />
                        <Span
                            FontFamily="CoinyRegular"
                            FontSize="40"
                            Text="R"
                            TextColor="{StaticResource SecondaryGreen}" />
                        <Span
                            FontFamily="CoinyRegular"
                            FontSize="40"
                            Text="I"
                            TextColor="{StaticResource SecondaryLightBlue}" />
                        <Span
                            FontFamily="CoinyRegular"
                            FontSize="40"
                            Text="O"
                            TextColor="{StaticResource SecondaryBlue}" />
                        <Span
                            FontFamily="CoinyRegular"
                            FontSize="40"
                            Text="R"
                            TextColor="{StaticResource SecondaryGreen}" />
                        <Span
                            FontFamily="CoinyRegular"
                            FontSize="40"
                            Text="I"
                            TextColor="{StaticResource PrimaryRed}" />
                        <Span
                            FontFamily="CoinyRegular"
                            FontSize="40"
                            Text="T"
                            TextColor="{StaticResource SecondaryLightBlue}" />
                        <Span
                            FontFamily="CoinyRegular"
                            FontSize="40"
                            Text="I"
                            TextColor="{StaticResource SecondaryGreen}" />
                        <Span
                            FontFamily="CoinyRegular"
                            FontSize="40"
                            Text="E"
                            TextColor="{StaticResource SecondaryLightBlue}" />
                        <Span
                            FontFamily="CoinyRegular"
                            FontSize="40"
                            Text="S"
                            TextColor="{StaticResource PrimaryRed}" />
                    </FormattedString>
                </Label.FormattedText>
            </Label>

        <!-- Score and Round Number -->
        <!-- Score and Round Number -->
<Grid Grid.Row="1"
      HorizontalOptions="FillAndExpand"
      VerticalOptions="Center"
      BackgroundColor="#EC6664"
      Margin="0"
      Padding="10">
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto"/>
        <ColumnDefinition Width="30"/> <!-- This column acts as the spacer -->
        <ColumnDefinition Width="Auto"/>
    </Grid.ColumnDefinitions>
             <Label Grid.Column="0"
           FontSize="36"
           TextColor="White"
           HorizontalTextAlignment="Center"
           VerticalTextAlignment="Center"
           Text="200 points"
           FontFamily="CoinyRegular"/>


    <!-- The empty column here serves as the space between the labels -->

    <Label Grid.Column="2"
           FontSize="20"
           TextColor="White"
           HorizontalTextAlignment="Center"
           VerticalTextAlignment="Center"
           Text="Round 1/10"
           FontFamily="CoinyRegular"/>
</Grid>

        <!-- Pass the Phone Header -->
        <Label Text="Pass the Phone to...."
               FontFamily="CoinyRegular"
               Grid.Row="2"
               Margin="20"
               HorizontalOptions="Center"
               FontSize="24"
               TextColor="#404040"/>
        <!--User Profile and Name-->
        <StackLayout Grid.Row="3"
                     HorizontalOptions="Center"
                     Spacing="20"
                     VerticalOptions="Center">
             <!--Circle Frame for Profile Picture Placeholder-->
            <Frame WidthRequest="200"
                   HeightRequest="200"
                   CornerRadius="100"
                   BackgroundColor="LightGray"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   IsClippedToBounds="True">
                 <Image Source="kenan.jpeg"
                        Aspect="AspectFill"
                        WidthRequest="200"
                        HeightRequest="200"
                        />

            </Frame>
             <Frame WidthRequest="400"
                   HeightRequest="200"
                   TranslationY="120"
                   BorderColor="Transparent"
                   BackgroundColor="Transparent"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   IsClippedToBounds="True">
                 <Image Source="shapes.png"
                        Aspect="AspectFill"
                        WidthRequest="400"
                        HeightRequest="200"
                        />

            </Frame>

            <Label Text="David Shannon" TranslationY="-235" FontSize="36" TextColor="#404040" HorizontalOptions="Center" FontFamily="CoinyRegular"/>
        </StackLayout>


        <!-- Ready Button -->
        <Button Text="READY?"
                Grid.Row="4"
                Margin="20"
                TranslationY="-140"
                TextColor="White"
                BackgroundColor="#EC6664"
                FontSize="30"
                FontFamily="CoinyRegular"
                CornerRadius="10"
                HorizontalOptions="FillAndExpand"/>










        </Grid>

    
    
</ContentPage>
