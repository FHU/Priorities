<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Priorities.Views.RoundResultsPage"
             Title="Priorities">
    <VerticalStackLayout BackgroundColor="LightBlue">
        <Grid Padding="10" RowSpacing="16" VerticalOptions="Center" HeightRequest="80">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.3*" />
                <ColumnDefinition Width="0.7*" />
            </Grid.ColumnDefinitions>
            <Image Grid.RowSpan="2" Grid.Column="0" Source="green_check" HeightRequest="60"></Image>
            <Label 
                Grid.Row="0"
                Grid.Column="1"
        Text="Revealing Results..."
                FontAttributes="Bold"
        VerticalOptions="Center" 
        HorizontalOptions="Start" />
            <Label 
                Grid.Row="1"
                Grid.Column="1"
Text="Name"
                FontAttributes="Bold"
VerticalOptions="Center" 
HorizontalOptions="Start" />
        </Grid>

        <Grid  Padding="0" ColumnSpacing="16" VerticalOptions="Center" HeightRequest="100">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>


            <Grid Grid.Column="0" Padding="30" RowSpacing="16" VerticalOptions="Center" >
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
                <RoundRectangle Grid.RowSpan="2" Fill="White" CornerRadius="30">
                    <RoundRectangle.Shadow>
                    <Shadow Brush="Gray"
Radius="10"
                            Offset="5,5"
Opacity="0.9"></Shadow>
                    </RoundRectangle.Shadow>
                </RoundRectangle>
                
            <Label 
                Grid.Row="0"
        Text="Round"
                FontAttributes="Bold"
                Margin="0,10,0,0"
        VerticalOptions="Center" 
        HorizontalOptions="Center" />
            <Label 
                Grid.Row="1"
           
Text="1/5"
                Margin="0,0,0,10"
VerticalOptions="Center" 
HorizontalOptions="Center" />
        </Grid>

        <Grid Grid.Column="1" Padding="30" RowSpacing="16" VerticalOptions="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
                <RoundRectangle Grid.RowSpan="2" Fill="White" CornerRadius="30">
                    <RoundRectangle.Shadow>
                        <Shadow Brush="Gray"
Radius="10"
                                Offset="5,5"
Opacity="0.9"></Shadow>
                    </RoundRectangle.Shadow>
                </RoundRectangle> 
                <Label 
                Grid.Row="0"
        Text="Score"
                    FontAttributes="Bold"
                    Margin="0,10,0,0"
        VerticalOptions="Center" 
        HorizontalOptions="Center" />
            <Label 
                Grid.Row="1"
Text="50"
                Margin="0,0,0,10"
VerticalOptions="Center" 
HorizontalOptions="Center" />
        </Grid>
            
        </Grid>

        <Grid MinimumHeightRequest="400" Padding="0,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="80" />
                <RowDefinition Height="80" />
                <RowDefinition Height="80" />
                <RowDefinition Height="80" />
                <RowDefinition Height="80" />
            </Grid.RowDefinitions>

            <Grid Padding="10" Grid.Row="0" ColumnSpacing="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40" />
                    <ColumnDefinition Width="160" />
                    <ColumnDefinition Width="75" />
                    <ColumnDefinition Width="50" />
                    <ColumnDefinition Width="30" />
                </Grid.ColumnDefinitions>
                

                <RoundRectangle Grid.Column="1" Grid.ColumnSpan="2"  Fill="White" CornerRadius="30">
                        
                  
                    <RoundRectangle.Shadow>
                        <Shadow Brush="Gray"
Radius="10"
                                Offset="5,5"
Opacity="0.9"></Shadow>
                    </RoundRectangle.Shadow>
                </RoundRectangle>
                <Border Grid.Column="0" Grid.ColumnSpan="2" Stroke="Black" HorizontalOptions="Start"
                        StrokeShape="Ellipse" WidthRequest="60" HeightRequest="60" StrokeThickness="2" BackgroundColor="Blue">
                    <Label 
Text="1"
                        FontAttributes="Bold"
VerticalOptions="Center" 
HorizontalOptions="Center" />
                    <Border.Shadow>
                        <Shadow Brush="Gray"
                                Offset="2,2"
Radius="5"
Opacity="0.9"></Shadow>
                    </Border.Shadow>
                </Border>
                <Label 
        Grid.Column="1"
        Text="Giraffe"
        VerticalOptions="Center" 
        HorizontalOptions="Center" />
                <Image Grid.Column="2" Source="green_check.jpg"  HeightRequest="35" WidthRequest="35">
                </Image>
                <RoundRectangle Grid.Column="3" Grid.ColumnSpan="2"  CornerRadius="30" />
                <Label 
Grid.Column="3"
                    Grid.ColumnSpan="2" 
Text="+ 25"
                    FontAttributes="Bold"
VerticalOptions="Center" 
HorizontalOptions="Center" />


            </Grid>

            <Grid Padding="10" Grid.Row="1" ColumnSpacing="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40" />
                    <ColumnDefinition Width="160" />
                    <ColumnDefinition Width="75" />
                    <ColumnDefinition Width="50" />
                    <ColumnDefinition Width="30" />
                </Grid.ColumnDefinitions>

               
                <RoundRectangle Grid.Column="1" Grid.ColumnSpan="2"  Fill="White" CornerRadius="30">
                    <RoundRectangle.Shadow>
                        <Shadow Brush="Gray"
Radius="10"
                                Offset="5,5"
Opacity="0.9"></Shadow>
                    </RoundRectangle.Shadow>
                </RoundRectangle>
                <Border Grid.Column="0" Grid.ColumnSpan="2" Stroke="Black" HorizontalOptions="Start"
                        StrokeShape="Ellipse" WidthRequest="60" HeightRequest="60" StrokeThickness="2" BackgroundColor="Red">
                    <Label 
Text="2"
                        FontAttributes="Bold"
VerticalOptions="Center" 
HorizontalOptions="Center" />
                    <Border.Shadow>
                        <Shadow Brush="Gray"
                                Offset="2,2"
Radius="5"
Opacity="0.9"></Shadow>
                    </Border.Shadow>
                </Border>
                <Label 
        Grid.Column="1"
        Text="Chocolate"
        VerticalOptions="Center" 
        HorizontalOptions="Center" />
                <Image Grid.Column="2" Source="green_check.jpg" HeightRequest="35" WidthRequest="35"></Image>
                <RoundRectangle Grid.Column="3" Grid.ColumnSpan="2"  CornerRadius="30" />
                <Label 
Grid.Column="3"
                    Grid.ColumnSpan="2" 
Text="+ 20"
                    FontAttributes="Bold"
VerticalOptions="Center" 
HorizontalOptions="Center" />


            </Grid>

            <Grid Padding="10" Grid.Row="2" ColumnSpacing="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40" />
                    <ColumnDefinition Width="160" />
                    <ColumnDefinition Width="75" />
                    <ColumnDefinition Width="50" />
                    <ColumnDefinition Width="30" />
                </Grid.ColumnDefinitions>
                

                <RoundRectangle Grid.Column="1" Grid.ColumnSpan="2"  Fill="White" CornerRadius="30">
                    <RoundRectangle.Shadow>
                        <Shadow Brush="Gray"
Radius="10"
                                Offset="5,5"
Opacity="0.9"></Shadow>
                    </RoundRectangle.Shadow>
                </RoundRectangle>
                <Border Grid.Column="0" Grid.ColumnSpan="2" Stroke="Black" HorizontalOptions="Start"
                        StrokeShape="Ellipse" WidthRequest="60" HeightRequest="60" StrokeThickness="2" BackgroundColor="White">
                    <Label 
Text="3"
                        FontAttributes="Bold"
VerticalOptions="Center" 
HorizontalOptions="Center" />
                    <Border.Shadow>
                        <Shadow Brush="Gray"
                                Offset="2,2"
Radius="5"
Opacity="0.9"></Shadow>
                    </Border.Shadow>
                </Border>
                <Label 
        Grid.Column="1"
        Text="Sleep"
        VerticalOptions="Center" 
        HorizontalOptions="Center" />
                <Image Grid.Column="2" Source="red_x" HeightRequest="35" WidthRequest="35"></Image>
                <Border Grid.Column="3" Stroke="Black" StrokeShape="Ellipse" WidthRequest="60" HeightRequest="60" StrokeThickness="2" BackgroundColor="Yellow">
                    <Label 
Text="4"
                        FontAttributes="Bold"
VerticalOptions="Center" 
HorizontalOptions="Center" />
                    <Border.Shadow>
                        <Shadow Brush="Gray"
                                Offset="2,2"
Radius="5"
Opacity="0.9"></Shadow>
                    </Border.Shadow>
                </Border>
                <RoundRectangle Grid.Column="4"  CornerRadius="30" />
                <Label 
Grid.Column="4"
Text="->"
VerticalOptions="Center" 
HorizontalOptions="Center" />


            </Grid>
            <Grid Padding="10" Grid.Row="3" ColumnSpacing="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40" />
                    <ColumnDefinition Width="160" />
                    <ColumnDefinition Width="75" />
                    <ColumnDefinition Width="50" />
                    <ColumnDefinition Width="30" />
                </Grid.ColumnDefinitions>

                
                <RoundRectangle Grid.Column="1" Grid.ColumnSpan="2"  Fill="White" CornerRadius="30">
                    <RoundRectangle.Shadow>
                        <Shadow Brush="Gray"
                                Offset="5,5"
Radius="10"
Opacity="0.9"></Shadow>
                    </RoundRectangle.Shadow>
                </RoundRectangle>
                <Border Grid.Column="0" Grid.ColumnSpan="2" Stroke="Black" HorizontalOptions="Start"
                        StrokeShape="Ellipse" WidthRequest="60" HeightRequest="60" StrokeThickness="2" BackgroundColor="Yellow"
                        >
                    <Label 
Text="4"
                        FontAttributes="Bold"
VerticalOptions="Center" 
HorizontalOptions="Center" />
                    <Border.Shadow>
                        <Shadow Brush="Gray"
                                Offset="2,2"
Radius="5"
Opacity="0.9"></Shadow>
                    </Border.Shadow>
                </Border>
                <Label 
        Grid.Column="1"
        Text="Fruit"
        VerticalOptions="Center" 
        HorizontalOptions="Center" />
                <Image Grid.Column="2" Source="red_x" HeightRequest="35" WidthRequest="35"></Image>
                <Border Grid.Column="3" Stroke="Black" StrokeShape="Ellipse" WidthRequest="60" HeightRequest="60" StrokeThickness="2" BackgroundColor="White">
                    <Label 
Text="3"
                        FontAttributes="Bold"
VerticalOptions="Center" 
HorizontalOptions="Center" />
                    <Border.Shadow>
                        <Shadow Brush="Gray"
                                Offset="2,2"
Radius="5"
Opacity="0.9"></Shadow>
                    </Border.Shadow>
                </Border>
                <RoundRectangle Grid.Column="4" CornerRadius="30" />
                <Label 
Grid.Column="4"
Text=">-"
VerticalOptions="Center" 
HorizontalOptions="Center" />


            </Grid>

            <Grid Padding="10" Grid.Row="4" ColumnSpacing="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40" />
                    <ColumnDefinition Width="160" />
                    <ColumnDefinition Width="75" />
                    <ColumnDefinition Width="50" />
                    <ColumnDefinition Width="30" />
                </Grid.ColumnDefinitions>

                
                <RoundRectangle Grid.Column="1" Grid.ColumnSpan="2"  Fill="White" CornerRadius="30">
                    <RoundRectangle.Shadow>
                        <Shadow Brush="Gray"
                                Offset="5,5"
Radius="10"
Opacity="0.9"></Shadow>
                    </RoundRectangle.Shadow>
                    
                </RoundRectangle>
                <Border Grid.Column="0" Grid.ColumnSpan="2" Stroke="Black" HorizontalOptions="Start"
                        StrokeShape="Ellipse" WidthRequest="60" HeightRequest="60" StrokeThickness="2" BackgroundColor="Green">
                    <Label 
Text="5"
                        FontAttributes="Bold"
VerticalOptions="Center" 
HorizontalOptions="Center" />
                    <Border.Shadow>
                        <Shadow Brush="Gray"
                                Offset="2,2"
Radius="5"
Opacity="0.9"></Shadow>
                    </Border.Shadow>
                </Border>

                <Label 
            Grid.Column="1"
            Text="Casey"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
                <Image Grid.Column="2" Source="green_check" HeightRequest="35" WidthRequest="35"></Image>
                <RoundRectangle Grid.Column="3" Grid.ColumnSpan="2" CornerRadius="30" />
                <Label 
    Grid.Column="3" Grid.ColumnSpan="2"
    Text="+ 5"
                    FontAttributes="Bold"
    VerticalOptions="Center" 
    HorizontalOptions="Center" />


            </Grid>
        </Grid>


        <Button
    Text="Next"
    BackgroundColor="#666"
        Margin="20"
        >
            <Button.Shadow>
                <Shadow Brush="Black"
        Radius="10"
        Opacity="0.9"></Shadow>
            </Button.Shadow>

        </Button>

    </VerticalStackLayout>
</ContentPage>