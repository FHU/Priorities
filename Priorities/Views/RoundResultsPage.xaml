<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Priorities.Views.RoundResultsPage"
             Title="Priorities">
    <VerticalStackLayout>
        <Grid Padding="10" RowSpacing="16" VerticalOptions="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.3*" />
                <ColumnDefinition Width="0.7*" />
            </Grid.ColumnDefinitions>
            <Image Grid.Row="0" Grid.Column="0"></Image>
            <Label 
                Grid.Row="0"
                Grid.Column="1"
        Text="Revealing Results"
        VerticalOptions="Center" 
        HorizontalOptions="Start" />
            <Label 
                Grid.Row="1"
                Grid.Column="1"
Text="Name"
VerticalOptions="Center" 
HorizontalOptions="Start" />
        </Grid>

        <Grid  Padding="0" RowSpacing="16" VerticalOptions="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>


            <Grid Grid.Column="0" Padding="30" RowSpacing="16" VerticalOptions="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
                <RoundRectangle Grid.RowSpan="2" Fill="Gray" CornerRadius="30" />
            <Label 
                Grid.Row="0"
        Text="Round"
        VerticalOptions="Center" 
        HorizontalOptions="Center" />
            <Label 
                Grid.Row="1"
Text="1/5"
VerticalOptions="Center" 
HorizontalOptions="Center" />
        </Grid>

        <Grid Grid.Column="1" Padding="30" RowSpacing="16" VerticalOptions="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
                <RoundRectangle Grid.RowSpan="2" Fill="Gray" CornerRadius="30" />
                <Label 
                Grid.Row="0"
        Text="Score"
        VerticalOptions="Center" 
        HorizontalOptions="Center" />
            <Label 
                Grid.Row="1"
Text="50"
VerticalOptions="Center" 
HorizontalOptions="Center" />
        </Grid>
        </Grid>

        <Button
    Text="Next"
    BackgroundColor="#666"
        Margin="20"
        >
            <Button.Shadow>
                <Shadow Brush="Black"
        Radius="10"
        Opacity="0.9"></Shadow>
            </Button.Shadow>

        </Button>

    </VerticalStackLayout>
</ContentPage>