<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Priorities.Views.RoundResultsPage"
              xmlns:views="clr-namespace:Priorities.Views"
             xmlns:viewmodels="clr-namespace:Priorities.ViewModels"
             xmlns:models="clr-namespace:Priorities.Models"
             x:DataType="viewmodels:RoundResultsPageViewModel"
             Title="Rankings">

    <!-- main -->
    <Grid RowSpacing="0" BackgroundColor="LightBlue" Padding="0,0,0,12">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <!-- header -->
            <Grid Grid.Row="0" Padding="10" RowSpacing="0" VerticalOptions="Center" HeightRequest="60" BackgroundColor="DarkBlue">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>

                <!-- score number -->
                <Label 
            Grid.Column="0"
            Text="{Binding Score}"
            TextColor="White"
            FontAttributes="Bold"
            FontSize="32"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            />
                <!-- score label -->
                <Label 
                Grid.Column="1"
                Text="  points"
                FontSize="16"
                VerticalOptions="End"
                TextColor="White"
                FontAttributes="Bold"
                Margin="0,0,0,5"
                   />
                <!-- round label -->
                <Label Grid.Column="3"
            Text="round  "
                   TextColor="White"
            FontSize="16"
            HorizontalOptions="Center"
            VerticalOptions="End"
            Margin="0,0,0,5"
            />
                <Label Grid.Column="4"
                Text="{Binding Round}"
                   TextColor="White"
                FontSize="32"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                />
                <Label Grid.Column="5"
                Text="/5"
                   TextColor="White"
                FontSize="32"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                   />
            </Grid>

            <!-- player -->
        <Grid Grid.Row="1" Padding="10,20,10,10" RowSpacing="0" VerticalOptions="Center" HeightRequest="70" >
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <!-- profile picture -->
            <Image Grid.RowSpan="2"
                   Grid.Column="0"
                   Source="{Binding Person.ImageName}"
                   HeightRequest="50"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   Margin="10,5,20,0">
            </Image>

            <!-- revealing results -->
            <Label Grid.Row="0"
                   Grid.Column="1"
                   Text="Revealing Results for"
                   TextColor="Gray"
                   FontSize="16"
                   FontAttributes="Bold"
                   VerticalOptions="Center"
                   HorizontalOptions="Start"
                   />

            <!-- player name -->
            <Label Grid.Row="1"
                   Grid.Column="1"
                   Text="{Binding Person.Name}"
                   TextColor="Black"
                   FontAttributes="Bold"
                   FontSize="32"
                   VerticalOptions="Center"
                   HorizontalOptions="Start"
                   />

        </Grid>

        <!--rankings-->
        <CollectionView Grid.Row="2" Margin="0,40,0,0" ItemsSource="{Binding rankings}">
            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical"/>
            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Ranking">

                    <Grid Padding="10" Grid.Row="0" ColumnSpacing="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="240" />
                            <ColumnDefinition Width="auto" />
                        </Grid.ColumnDefinitions>

                        <!-- guess 1 bg -->
                        <RoundRectangle Grid.Column="1" Fill="White" CornerRadius="30" MaximumHeightRequest="70">
                            <RoundRectangle.Shadow>
                                <Shadow Brush="Gray"
                                        Radius="10"
                                        Offset="5,5"
                                        Opacity="0.9">
                                </Shadow>
                            </RoundRectangle.Shadow>
                        </RoundRectangle>

                        <!-- guess 1 circle -->
                        <Border Grid.Column="0"
                                Stroke="Black"
                                StrokeShape="Ellipse"
                                WidthRequest="60"
                                HeightRequest="60"
                                StrokeThickness="2"
                                BackgroundColor="#567BFF">

                            <!-- guess 1 number -->
                            <Label Text="{Binding Number}"
                                   FontAttributes="Bold"
                                   FontSize="24"
                                   VerticalOptions="Center"
                                   HorizontalOptions="Center"
                                   />

                            <!-- shadow -->
                            <Border.Shadow>
                                <Shadow Brush="Gray"
                                        Offset="2,2"
                                        Radius="5"
                                        Opacity="0.9">
                                </Shadow>
                            </Border.Shadow>
                        </Border>

                        <!-- guess 1 text -->
                        <Label Grid.Column="1"
                               Text="{Binding Name}"
                               FontAttributes="Bold"
                               FontSize="24"
                               TextColor="Black"
                               VerticalOptions="Center"
                               HorizontalOptions="Center"
                               />

                        <!-- guess 1 points -->
                        <Label Grid.Column="2"
                               Text="{Binding Points,StringFormat='{0:+#;-#;0}'}"
                               TextColor="{Binding Color}"
                               FontAttributes="Bold"
                               FontSize="24"
                               VerticalOptions="Center"
                               HorizontalOptions="Start"
                               />
                    </Grid>

                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- next button -->
        <Button Grid.Row="3"
                Text="Next"
                FontAttributes="Bold"
                FontSize="22"
                BackgroundColor="DarkBlue"
                Margin="20,10">

            <Button.Shadow>
                <Shadow Brush="Black"
                        Radius="10"
                        Opacity="0.9">
                </Shadow>
            </Button.Shadow>
        </Button>

        
    </Grid>

</ContentPage>