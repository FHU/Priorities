<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Priorities.Views.RoundResultsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:models="clr-namespace:Priorities.Models"
    xmlns:viewmodels="clr-namespace:Priorities.ViewModels"
    xmlns:views="clr-namespace:Priorities.Views"
    Title="Rankings"
    x:DataType="viewmodels:RoundResultsPageViewModel">

    <!--  main  -->
    <Grid
        Padding="0,0,0,12"
        BackgroundColor="#EBEBE5"
        RowSpacing="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <!--  header  -->
        <Grid
            Grid.Row="0"
            Padding="10"
            BackgroundColor="#EC6664"
            HeightRequest="60"
            RowSpacing="0"
            VerticalOptions="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <!--  score number  -->
            <Label
                Grid.Column="0"
                FontAttributes="Bold"
                FontSize="32"
                HorizontalOptions="Center"
                Text="{Binding Score}"
                TextColor="#EBEBE5"
                VerticalOptions="Center" />

            <!--  score label  -->
            <Label
                Grid.Column="1"
                Margin="0,0,0,5"
                FontSize="16"
                Text="  points"
                TextColor="#EBEBE5"
                VerticalOptions="End" />

            <!--  round label  -->
            <Label
                Grid.Column="3"
                Margin="0,0,0,5"
                FontSize="16"
                HorizontalOptions="Center"
                Text="round  "
                TextColor="#EBEBE5"
                VerticalOptions="End" />

            <!--  round number  -->
            <Label
                Grid.Column="4"
                FontAttributes="Bold"
                FontSize="32"
                HorizontalOptions="Center"
                Text="{Binding Round}"
                TextColor="#EBEBE5"
                VerticalOptions="Center" />

            <!--  total rounds number  -->
            <Label
                Grid.Column="5"
                FontAttributes="Bold"
                FontSize="32"
                HorizontalOptions="Center"
                Text="/5"
                TextColor="White"
                VerticalOptions="Center" />
        </Grid>

        <!--  player  -->
        <Grid
            Grid.Row="1"
            Padding="10,20,10,10"
            HeightRequest="70"
            RowSpacing="0"
            VerticalOptions="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <!--  profile picture  -->
            <Image
                Grid.RowSpan="2"
                Grid.Column="0"
                Margin="10,5,20,0"
                HeightRequest="50"
                HorizontalOptions="Center"
                Source="{Binding Person.ImageName}"
                VerticalOptions="Center" />

            <!--  revealing results  -->
            <Label
                Grid.Row="0"
                Grid.Column="1"
                FontAttributes="Bold"
                FontSize="16"
                HorizontalOptions="Start"
                Opacity="0.7"
                Text="Revealing Results for"
                TextColor="#3C3C3C"
                VerticalOptions="Center" />

            <!--  player name  -->
            <Label
                Grid.Row="1"
                Grid.Column="1"
                FontAttributes="Bold"
                FontSize="32"
                HorizontalOptions="Start"
                Text="{Binding Person.Name}"
                TextColor="#3C3C3C"
                VerticalOptions="Center" />

        </Grid>

        <!--  rankings  -->
        <CollectionView
            x:Name="Results"
            Grid.Row="2"
            Margin="0,40,0,0"
            ItemsSource="{Binding rankings}">
            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical" VerticalItemSpacing="16" />
            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Ranking">

                    <Grid
                        Grid.Row="0"
                        Padding="12,4"
                        ColumnSpacing="8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="240" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!--  guess text bg  -->
                        <RoundRectangle
                            Grid.Column="1"
                            CornerRadius="30"
                            Fill="#087E8B">
                            <RoundRectangle.Shadow>
                                <Shadow
                                    Brush="Gray"
                                    Opacity="0.9"
                                    Radius="10"
                                    Offset="5,5" />
                            </RoundRectangle.Shadow>
                        </RoundRectangle>

                        <!--  guess number circle  -->
                        <Border
                            Grid.Column="0"
                            BackgroundColor="#087E8B"
                            HeightRequest="60"
                            StrokeShape="Ellipse"
                            StrokeThickness="2"
                            WidthRequest="60">

                            <!--  guess number  -->
                            <Label
                                FontAttributes="Bold"
                                FontSize="24"
                                HorizontalOptions="Center"
                                Text="{Binding Number}"
                                TextColor="#EBEBE5"
                                VerticalOptions="Center" />

                            <!--  shadow  -->
                            <!--<Border.Shadow>
                                <Shadow Brush="Gray"
                                        Offset="2,2"
                                        Radius="5"
                                        Opacity="0.9">
                                </Shadow>
                            </Border.Shadow>-->
                        </Border>

                        <!--  guess text  -->
                        <Label
                            Grid.Column="1"
                            FontAttributes="Bold"
                            FontSize="24"
                            HorizontalOptions="Center"
                            Text="{Binding Name}"
                            TextColor="#EBEBE5"
                            VerticalOptions="Center" />

                        <!--  guess points  -->
                        <Label
                            Grid.Column="2"
                            FontAttributes="Bold"
                            FontSize="24"
                            HorizontalOptions="Center"
                            Text="{Binding Points, StringFormat='{0:+#;-#;0}'}"
                            TextColor="{Binding Color}"
                            VerticalOptions="Center" />
                    </Grid>

                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!--  next button  -->
        <Button
            Grid.Row="3"
            Margin="20,10"
            BackgroundColor="#EC6664"
            CornerRadius="24"
            FontAttributes="Bold"
            FontSize="22"
            HeightRequest="80"
            Text="NEXT"
            TextColor="White">

            <Button.Shadow>
                <Shadow
                    Brush="Black"
                    Opacity="0.9"
                    Radius="10" />
            </Button.Shadow>
        </Button>


    </Grid>

</ContentPage>