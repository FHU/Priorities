<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Priorities.Views.RoundResultsPage"
              xmlns:views="clr-namespace:Priorities.Views"
             xmlns:viewmodels="clr-namespace:Priorities.ViewModels"
             xmlns:models="clr-namespace:Priorities.Models"
             x:DataType="viewmodels:RoundResultsPageViewModel"
             Title="Rankings">

    <!-- main -->
    <Grid RowSpacing="0" BackgroundColor="#EBEBE5" Padding="0,0,0,12">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <!-- header -->
        <Grid Grid.Row="0" Padding="10" RowSpacing="0" VerticalOptions="Center" HeightRequest="60" BackgroundColor="#EC6664">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <!-- score number -->
            <Label Grid.Column="0"
                   Text="{Binding Score}"
                   TextColor="#EBEBE5"
                   FontAttributes="Bold"
                   FontSize="32"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                       />

            <!-- score label -->
            <Label Grid.Column="1"
                   Text="  points"
                   FontSize="16"
                   VerticalOptions="End"
                   TextColor="#EBEBE5"
                   Margin="0,0,0,5"
                   />

            <!-- round label -->
            <Label Grid.Column="3"
                   Text="round  "
                   TextColor="#EBEBE5"
                   FontSize="16"
                   HorizontalOptions="Center"
                   VerticalOptions="End"
                   Margin="0,0,0,5"
                   />

            <!-- round number -->
            <Label Grid.Column="4"
                   Text="{Binding Round}"
                   TextColor="#EBEBE5"
                   FontSize="32"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   />

            <!-- total rounds number -->
            <Label Grid.Column="5"
                   Text="/5"
                   TextColor="White"
                   FontSize="32"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   />
        </Grid>

        <!-- player -->
        <Grid Grid.Row="1" Padding="10,20,10,10" RowSpacing="0" VerticalOptions="Center" HeightRequest="70" >
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <!-- profile picture -->
            <Image Grid.RowSpan="2"
                   Grid.Column="0"
                   Source="{Binding Person.ImageName}"
                   HeightRequest="50"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   Margin="10,5,20,0">
            </Image>

            <!-- revealing results -->
            <Label Grid.Row="0"
                   Grid.Column="1"
                   Text="Revealing Results for"
                   TextColor="#3C3C3C"
                   Opacity="0.7"
                   FontSize="16"
                   FontAttributes="Bold"
                   VerticalOptions="Center"
                   HorizontalOptions="Start"
                   />

            <!-- player name -->
            <Label Grid.Row="1"
                   Grid.Column="1"
                   Text="{Binding Person.Name}"
                   TextColor="#3C3C3C"
                   FontAttributes="Bold"
                   FontSize="32"
                   VerticalOptions="Center"
                   HorizontalOptions="Start"
                   />

        </Grid>

        <!--rankings-->
        <CollectionView Grid.Row="2" Margin="0,40,0,0" ItemsSource="{Binding rankings}">
            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical" VerticalItemSpacing="16"/>
            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Ranking">

                    <Grid Padding="12,4" Grid.Row="0" ColumnSpacing="8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="240" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!-- guess text bg -->
                        <RoundRectangle Grid.Column="1" Fill="#087E8B" CornerRadius="30">
                            <RoundRectangle.Shadow>
                                <Shadow Brush="Gray"
                                        Radius="10"
                                        Offset="5,5"
                                        Opacity="0.9">
                                </Shadow>
                            </RoundRectangle.Shadow>
                        </RoundRectangle>

                        <!-- guess number circle -->
                        <Border Grid.Column="0"
                                StrokeShape="Ellipse"
                                WidthRequest="60"
                                HeightRequest="60"
                                StrokeThickness="2"
                                BackgroundColor="#087E8B">

                            <!-- guess number -->
                            <Label Text="{Binding Number}"
                                   TextColor="#EBEBE5"
                                   FontAttributes="Bold"
                                   FontSize="24"
                                   VerticalOptions="Center"
                                   HorizontalOptions="Center"
                                   />

                            <!-- shadow -->
                            <!--<Border.Shadow>
                                <Shadow Brush="Gray"
                                        Offset="2,2"
                                        Radius="5"
                                        Opacity="0.9">
                                </Shadow>
                            </Border.Shadow>-->
                        </Border>

                        <!-- guess text -->
                        <Label Grid.Column="1"
                               Text="{Binding Name}"
                               FontAttributes="Bold"
                               FontSize="24"
                               TextColor="#EBEBE5"
                               VerticalOptions="Center"
                               HorizontalOptions="Center"
                               />

                        <!-- guess points -->
                        <Label Grid.Column="2"
                               Text="{Binding Points,StringFormat='{0:+#;-#;0}'}"
                               TextColor="{Binding Color}"
                               FontAttributes="Bold"
                               FontSize="24"
                               VerticalOptions="Center"
                               HorizontalOptions="Center"
                               />
                    </Grid>

                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- next button -->
        <Button Grid.Row="3"
                Text="NEXT"
                TextColor="White"
                FontAttributes="Bold"
                FontSize="22"
                BackgroundColor="#EC6664"
                Margin="20,10"
                HeightRequest="80"
                CornerRadius="24">

            <Button.Shadow>
                <Shadow Brush="Black"
                        Radius="10"
                        Opacity="0.9">
                </Shadow>
            </Button.Shadow>
        </Button>


    </Grid>

</ContentPage>