<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Priorities.Views.RoundResultsPage"
             Title="Priorities">
    <VerticalStackLayout>
        <Grid Padding="10" RowSpacing="16" VerticalOptions="Center" HeightRequest="80">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.3*" />
                <ColumnDefinition Width="0.7*" />
            </Grid.ColumnDefinitions>
            <Image Grid.RowSpan="2" Grid.Column="0" Source="green_check" HeightRequest="60"></Image>
            <Label 
                Grid.Row="0"
                Grid.Column="1"
        Text="Revealing Results..."
        VerticalOptions="Center" 
        HorizontalOptions="Start" />
            <Label 
                Grid.Row="1"
                Grid.Column="1"
Text="Name"
VerticalOptions="Center" 
HorizontalOptions="Start" />
        </Grid>

        <Grid  Padding="0" RowSpacing="16" VerticalOptions="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>


            <Grid Grid.Column="0" Padding="30" RowSpacing="16" VerticalOptions="Center" >
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
                <RoundRectangle Grid.RowSpan="2" Fill="Gray" CornerRadius="30">
                    <RoundRectangle.Shadow>
                    <Shadow Brush="Black"
Radius="10"
Opacity="0.9"></Shadow>
                    </RoundRectangle.Shadow>
                </RoundRectangle>
                
            <Label 
                Grid.Row="0"
        Text="Round"
                Margin="0,10,0,0"
        VerticalOptions="Center" 
        HorizontalOptions="Center" />
            <Label 
                Grid.Row="1"
           
Text="1/5"
                Margin="0,0,0,10"
VerticalOptions="Center" 
HorizontalOptions="Center" />
        </Grid>

        <Grid Grid.Column="1" Padding="30" RowSpacing="16" VerticalOptions="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
                <RoundRectangle Grid.RowSpan="2" Fill="Gray" CornerRadius="30">
                    <RoundRectangle.Shadow>
                        <Shadow Brush="Black"
Radius="10"
Opacity="0.9"></Shadow>
                    </RoundRectangle.Shadow>
                </RoundRectangle> 
                <Label 
                Grid.Row="0"
        Text="Score"
                    Margin="0,10,0,0"
        VerticalOptions="Center" 
        HorizontalOptions="Center" />
            <Label 
                Grid.Row="1"
Text="50"
                Margin="0,0,0,10"
VerticalOptions="Center" 
HorizontalOptions="Center" />
        </Grid>
            
        </Grid>

        <Grid MinimumHeightRequest="400" Padding="0,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid Padding="10" Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="0.5*" />
                </Grid.ColumnDefinitions>
                <Ellipse Grid.Column="0" WidthRequest="60" HeightRequest="60" Fill="Blue" />
                
                <Label 
            Grid.Column="0"
            Text="1"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
                <RoundRectangle Grid.Column="1" Grid.ColumnSpan="2"  Fill="Gray" CornerRadius="30">
                    <RoundRectangle.Shadow>
                        <Shadow Brush="Black"
Radius="10"
Opacity="0.9"></Shadow>
                    </RoundRectangle.Shadow>
                </RoundRectangle>
                <Label 
        Grid.Column="1"
        Text="Giraffe"
        VerticalOptions="Center" 
        HorizontalOptions="Center" />
                <Image Grid.Column="2" Source="green_check.jpg"  HeightRequest="40" WidthRequest="40"></Image>
                <RoundRectangle Grid.Column="3" Grid.ColumnSpan="2"  Fill="Gray" CornerRadius="30" />
                <Label 
Grid.Column="3"
                    Grid.ColumnSpan="2" 
Text="+ 25"
VerticalOptions="Center" 
HorizontalOptions="Center" />


            </Grid>

            <Grid Padding="10" Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="0.5*" />
                </Grid.ColumnDefinitions>

                <Ellipse Grid.Column="0" WidthRequest="60" HeightRequest="60" Fill="Red" />
                <Label 
            Grid.Column="0"
            Text="2"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
                <RoundRectangle Grid.Column="1" Grid.ColumnSpan="2"  Fill="Gray" CornerRadius="30">
                    <RoundRectangle.Shadow>
                        <Shadow Brush="Black"
Radius="10"
Opacity="0.9"></Shadow>
                    </RoundRectangle.Shadow>
                </RoundRectangle>
                <Label 
        Grid.Column="1"
        Text="Chocolate"
        VerticalOptions="Center" 
        HorizontalOptions="Center" />
                <Image Grid.Column="2" Source="green_check.jpg" HeightRequest="40" WidthRequest="40"></Image>
                <RoundRectangle Grid.Column="3" Grid.ColumnSpan="2" Fill="Gray" CornerRadius="30" />
                <Label 
Grid.Column="3"
                    Grid.ColumnSpan="2" 
Text="+ 20"
VerticalOptions="Center" 
HorizontalOptions="Center" />


            </Grid>

            <Grid Padding="10" Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="0.5*" />
                </Grid.ColumnDefinitions>

                <Ellipse Grid.Column="0" WidthRequest="60" HeightRequest="60" Fill="White" />
                <Label 
            Grid.Column="0"
            Text="3"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
                <RoundRectangle Grid.Column="1" Grid.ColumnSpan="2"  Fill="Gray" CornerRadius="30">
                    <RoundRectangle.Shadow>
                        <Shadow Brush="Black"
Radius="10"
Opacity="0.9"></Shadow>
                    </RoundRectangle.Shadow>
                </RoundRectangle>
                <Label 
        Grid.Column="1"
        Text="Sleep"
        VerticalOptions="Center" 
        HorizontalOptions="Center" />
                <Image Grid.Column="2" Source="red_x" HeightRequest="40" WidthRequest="40"></Image>
                <Ellipse Grid.Column="3" WidthRequest="60" HeightRequest="60" Fill="Yellow" />
                <Label 
Grid.Column="3"
Text="4"
VerticalOptions="Center" 
HorizontalOptions="Center" />
                <RoundRectangle Grid.Column="4" Fill="Gray" CornerRadius="30" />
                <Label 
Grid.Column="4"
Text="->"
VerticalOptions="Center" 
HorizontalOptions="Center" />


            </Grid>
            <Grid Padding="10" Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="0.5*" />
                </Grid.ColumnDefinitions>

                <Ellipse Grid.Column="0" WidthRequest="60" HeightRequest="60" Fill="Yellow" />
                <Label 
            Grid.Column="0"
            Text="4"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
                <RoundRectangle Grid.Column="1" Grid.ColumnSpan="2"  Fill="Gray" CornerRadius="30">
                    <RoundRectangle.Shadow>
                        <Shadow Brush="Black"
Radius="10"
Opacity="0.9"></Shadow>
                    </RoundRectangle.Shadow>
                </RoundRectangle>
                <Label 
        Grid.Column="1"
        Text="Fruit"
        VerticalOptions="Center" 
        HorizontalOptions="Center" />
                <Image Grid.Column="2" Source="red_x" HeightRequest="40" WidthRequest="40"></Image>
                <Ellipse Grid.Column="3" WidthRequest="60" HeightRequest="60" Fill="White" />
                <Label 
Grid.Column="3"
Text="3"
VerticalOptions="Center" 
HorizontalOptions="Center" />
                <RoundRectangle Grid.Column="4" Fill="Gray" CornerRadius="30" />
                <Label 
Grid.Column="4"
Text=">-"
VerticalOptions="Center" 
HorizontalOptions="Center" />


            </Grid>

            <Grid Padding="10" Grid.Row="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="0.5*" />
                </Grid.ColumnDefinitions>

                <Ellipse Grid.Column="0" WidthRequest="60" HeightRequest="60" Fill="Green" />
                <Label 
                Grid.Column="0"
                Text="5"
                VerticalOptions="Center" 
                HorizontalOptions="Center" />
                <RoundRectangle Grid.Column="1" Grid.ColumnSpan="2"  Fill="Gray" CornerRadius="30">
                    <RoundRectangle.Shadow>
                        <Shadow Brush="Black"
Radius="10"
Opacity="0.9"></Shadow>
                    </RoundRectangle.Shadow>
                </RoundRectangle>
                <Label 
            Grid.Column="1"
            Text="Casey"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
                <Image Grid.Column="2" Source="green_check" HeightRequest="40" WidthRequest="40"></Image>
                <RoundRectangle Grid.Column="3" Grid.ColumnSpan="2" Fill="Gray" CornerRadius="30" />
                <Label 
    Grid.Column="3" Grid.ColumnSpan="2"
    Text="+ 5"
    VerticalOptions="Center" 
    HorizontalOptions="Center" />


            </Grid>
        </Grid>


        <Button
    Text="Next"
    BackgroundColor="#666"
        Margin="20"
        >
            <Button.Shadow>
                <Shadow Brush="Black"
        Radius="10"
        Opacity="0.9"></Shadow>
            </Button.Shadow>

        </Button>

    </VerticalStackLayout>
</ContentPage>