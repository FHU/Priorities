<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Priorities.Views.HighScorePage"
             xmlns:viewmodels="clr-namespace:Priorities.ViewModels"
             x:DataType="viewmodels:HighScorePageViewModel"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             Title="HighScorePage"          
             >
    <ScrollView BackgroundColor="White">
        
        <Grid RowSpacing="10" WidthRequest="300">
            
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <toolkit:Expander Grid.Row="0">
                <toolkit:Expander.Header>
                    <Border Grid.Row="0"
                            Stroke="#000000"
                            StrokeThickness="1"
                            HorizontalOptions="FillAndExpand"
                            >
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="5" />
                        </Border.StrokeShape>
                        <HorizontalStackLayout BackgroundColor="White" Grid.Row="0" Padding="20">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="40"/>
                                    <ColumnDefinition Width="180"/>
                                    <ColumnDefinition Width="50"/>
                                </Grid.ColumnDefinitions>
                                <Label FontSize="24" Grid.Column="0" Text="1." TextColor="Black" VerticalOptions="Center"/>
                                <VerticalStackLayout Grid.Column="1" VerticalOptions="End">
                                    <Label FontSize="18" Text="{Binding GameResult.Team.Name}" TextColor="Black"/>
                                    <CollectionView ItemsSource="{Binding GameResult.Team.Players}">

                                        <CollectionView.ItemTemplate>
                                            <DataTemplate>
                                                <toolkit:AvatarView
                                                    ImageSource="kenan.jpeg"
                                                    HeightRequest="20"
                                                    WidthRequest="20"
                                                    BorderColor="Black"/>
                                            </DataTemplate>
                                        </CollectionView.ItemTemplate>
                                        
                                    </CollectionView>
                                    <HorizontalStackLayout Spacing="-10">
                                        <toolkit:AvatarView
                                    ImageSource="kenan.jpeg"
                                    HeightRequest="20"
                                    WidthRequest="20"
                                    BorderColor="Black"/>
                                        <toolkit:AvatarView
                                    ImageSource="kenan.jpeg"
                                    HeightRequest="20"
                                    WidthRequest="20"
                                    BorderColor="Black"/>
                                        <toolkit:AvatarView
                                    ImageSource="kenan.jpeg"
                                    HeightRequest="20"
                                    BorderColor="Black"
                                    WidthRequest="20"/>
                                        <toolkit:AvatarView
                                    ImageSource="kenan.jpeg"
                                    HeightRequest="20"
                                    BorderColor="Black"
                                    WidthRequest="20"/>
                                    </HorizontalStackLayout>
                                </VerticalStackLayout>
                                <Label Grid.Column="2" FontSize="18" Text="{Binding GameResult.Score}" TextColor="Black" VerticalOptions="Center"/>
                            </Grid>
                        </HorizontalStackLayout>
                    </Border>
                </toolkit:Expander.Header>
                <Border Grid.Row="0"
                        Stroke="#000000"
                        StrokeThickness="1"
                        HorizontalOptions="FillAndExpand"
                        >
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="5" />
                    </Border.StrokeShape>
                    <Grid BackgroundColor="White" RowSpacing="10" Padding="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <CollectionView Grid.Row="0" ItemsSource="{Binding Achievements}">
                            <CollectionView.ItemsLayout>
                                <GridItemsLayout Orientation="Vertical"/>
                            </CollectionView.ItemsLayout>
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Border
                                            Stroke="#000000"
                                            StrokeThickness="0.5"
                                            Padding="5"
                                            HorizontalOptions="FillAndExpand">
                                        <Border.StrokeShape>
                                            <RoundRectangle CornerRadius="5" />
                                        </Border.StrokeShape>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Label Padding="3"
                                                       Grid.Column="0"
                                                       Text="Snail's Pace"
                                                       TextColor="Black"
                                                       FontSize="16" 
                                                       VerticalOptions="Center"/>
                                            <Ellipse Grid.Column="1"
                                                         Fill="LightBlue"
                                                         WidthRequest="25"
                                                         HeightRequest="25"
                                                         HorizontalOptions="End"/>
                                        </Grid>
                                    </Border>

                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>

                        <CollectionView Grid.Row="1" ItemsSource="{Binding GameResult.Team.Players}">

                            <CollectionView.ItemsLayout>
                                <GridItemsLayout Span="3" Orientation="Vertical"/>
                            </CollectionView.ItemsLayout>

                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Border Stroke="#000000"
                                            StrokeThickness="0.5"
                                            Padding="5">
                                        <Border.StrokeShape>
                                            <RoundRectangle CornerRadius="20" />
                                        </Border.StrokeShape>
                                        <HorizontalStackLayout Spacing="5" VerticalOptions="Center">
                                            <toolkit:AvatarView
                                                HorizontalOptions="Center"
                                                VerticalOptions="Center"
                                                ImageSource="{Binding GameResult.Team.Players}"
                                                HeightRequest="20"
                                                WidthRequest="20"/>
                                            <Label Text="add playername"
                                                   TextColor="Black"
                                                   FontSize="12" />
                                        </HorizontalStackLayout>

                                    </Border>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>

                        </CollectionView>
                        
                        <HorizontalStackLayout Grid.Row="2" Spacing="5">
                            <Label Text="Played:" TextColor="Black"/>
                            <Label Text="{Binding GameResult.Date}" TextColor="Black"/>
                        </HorizontalStackLayout>
                    </Grid>
                </Border>
            </toolkit:Expander>

            <toolkit:Expander Grid.Row="1">
                <toolkit:Expander.Header>
                    <HorizontalStackLayout BackgroundColor="Blue" Grid.Row="1" Padding="20">
                        <Grid ColumnSpacing="35">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" Text="2." TextColor="White"/>
                            <VerticalStackLayout Grid.Column="1">
                                <Label Text="Frozen Drama Queens" TextColor="White"/>
                                <HorizontalStackLayout Spacing="-10">
                                    <toolkit:AvatarView
                                    HorizontalOptions="Center"
                                    VerticalOptions="Center"
                                    ImageSource="kenan.jpeg"
                                    HeightRequest="20"
                                    WidthRequest="20"/>
                                    <toolkit:AvatarView
                                    HorizontalOptions="Center"
                                    VerticalOptions="Center"
                                    ImageSource="kenan.jpeg"
                                    HeightRequest="20"
                                    WidthRequest="20"/>
                                    <toolkit:AvatarView
                                    HorizontalOptions="CenterAndExpand"
                                    VerticalOptions="Center"
                                    ImageSource="kenan.jpeg"
                                    HeightRequest="20"
                                    WidthRequest="20"/>
                                    <toolkit:AvatarView
                                    HorizontalOptions="CenterAndExpand"
                                    VerticalOptions="CenterAndExpand"
                                    ImageSource="kenan.jpeg"
                                    HeightRequest="20"
                                    WidthRequest="20"/>
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                            <Label Grid.Column="2"
                                   Text="4875"
                                   TextColor="White"/>
                        </Grid>
                    </HorizontalStackLayout>

                </toolkit:Expander.Header>

                <Grid BackgroundColor="White" RowSpacing="10" Padding="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" HorizontalOptions="FillAndExpand" RowSpacing="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0"
                                Stroke="#000000"
                                StrokeThickness="1"
                                Padding="10"
                                HorizontalOptions="FillAndExpand">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius=" 20" />
                            </Border.StrokeShape>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="auto"/>
                                </Grid.ColumnDefinitions>
                                <Label Padding="3"
                                       Grid.Column="0"
                                       Text="Snail's Pace"
                                       TextColor="Black"
                                       FontSize="16" 
                                       VerticalOptions="Center"/>
                                <Ellipse Grid.Column="1"
                                         Fill="LightBlue"
                                         WidthRequest="25"
                                         HeightRequest="25"
                                         HorizontalOptions="End"/>

                            </Grid>

                        </Border>
                        <Border Grid.Row="1"
                                Stroke="#000000"
                                StrokeThickness="1"
                                Padding="10"
                                HorizontalOptions="FillAndExpand">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius=" 20" />
                            </Border.StrokeShape>
                            <Grid HorizontalOptions="FillAndExpand">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="auto"/>
                                </Grid.ColumnDefinitions>
                                <Label Padding="3"
                                       Grid.Column="0"
                                       Text="Fastest Man Alive"
                                       TextColor="Black"
                                       FontSize="16" 
                                       VerticalOptions="Center"
                                       HorizontalOptions="FillAndExpand"
                                       />
                                <Ellipse Grid.Column="1"
                                         Fill="LightBlue"
                                         WidthRequest="25"
                                         HeightRequest="25"
                                         HorizontalOptions="End"/>
                            </Grid>
                        </Border>
                        <Border Grid.Row="2"
                                Stroke="#000000"
                                StrokeThickness="1"
                                Padding="10"
                                HorizontalOptions="FillAndExpand">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius=" 20" />
                            </Border.StrokeShape>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="auto"/>
                                </Grid.ColumnDefinitions>
                                <Label Padding="3"
                                       Grid.Column="0"
                                       Text="Open Books"
                                       TextColor="Black"
                                       FontSize="16" 
                                       VerticalOptions="Center"/>
                                <Ellipse Grid.Column="1"
                                         Fill="LightBlue"
                                         WidthRequest="25"
                                         HeightRequest="25"
                                         HorizontalOptions="End"/>
                            </Grid>
                        </Border>
                    </Grid>

                    <Grid Grid.Row="1" ColumnSpacing="5" RowSpacing="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Row="0"
                                Grid.Column="0"
                                Stroke="#000000"
                                StrokeThickness="0.5"
                                Padding="5">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="20" />
                            </Border.StrokeShape>
                            <HorizontalStackLayout Spacing="5" VerticalOptions="Center">
                                <toolkit:AvatarView
                                 VerticalOptions="Center"
                                 ImageSource="kenan.jpeg"
                                 HeightRequest="20"
                                 WidthRequest="20"/>
                                <Label Text="Kenan"
                                       TextColor="Black"
                                       FontSize="12"/>
                            </HorizontalStackLayout>
                        </Border>

                        <Border Grid.Row="0"
                                Grid.Column="1"
                                Stroke="#000000"
                                StrokeThickness="0.5"
                                Padding="5">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="20" />
                            </Border.StrokeShape>
                            <HorizontalStackLayout Spacing="5" HorizontalOptions="Center" VerticalOptions="Center">
                                <toolkit:AvatarView
                                 HorizontalOptions="Center"
                                 VerticalOptions="Center"
                                 ImageSource="kenan.jpeg"
                                 HeightRequest="20"
                                 WidthRequest="20"/>
                                <Label Text="Kacy"
                                       TextColor="Black"
                                       FontSize="12" />
                            </HorizontalStackLayout>
                        </Border>

                        <Border Grid.Row="0"
                                Grid.Column="2"
                                Stroke="#000000"
                                StrokeThickness="0.5"
                                Padding="5">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="20" />
                            </Border.StrokeShape>
                            <HorizontalStackLayout Spacing="5" HorizontalOptions="Center" VerticalOptions="Center">
                                <toolkit:AvatarView
                                 HorizontalOptions="Center"
                                 VerticalOptions="Center"
                                 ImageSource="kenan.jpeg"
                                 HeightRequest="20"
                                 WidthRequest="20"/>
                                <Label Text="Xenan"
                                       TextColor="Black"
                                       FontSize="12" />
                            </HorizontalStackLayout>

                        </Border>

                        <Border Grid.Row="1"
                                Grid.Column="0"
                                Stroke="#000000"
                                StrokeThickness="0.5"
                                Padding="5">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="20" />
                            </Border.StrokeShape>
                            <HorizontalStackLayout Spacing="5" HorizontalOptions="Center" VerticalOptions="Center">
                                <toolkit:AvatarView
                                 HorizontalOptions="Center"
                                 VerticalOptions="Center"
                                 ImageSource="kenan.jpeg"
                                 HeightRequest="20"
                                 WidthRequest="20"/>
                                <Label Text="Kas3y"
                                       TextColor="Black"
                                       FontSize="12" />
                            </HorizontalStackLayout>
                        </Border>

                        <Border Grid.Row="1"
                                Grid.Column="1"
                                Stroke="#000000"
                                StrokeThickness="0.5"
                                Padding="5">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="20" />
                            </Border.StrokeShape>
                            <HorizontalStackLayout Spacing="5" HorizontalOptions="Center" VerticalOptions="Center">
                                <toolkit:AvatarView
                                 HorizontalOptions="Center"
                                 VerticalOptions="Center"
                                 ImageSource="kenan.jpeg"
                                 HeightRequest="20"
                                 WidthRequest="20"/>
                                <Label Text="Canen"
                                       TextColor="Black"
                                       FontSize="12" />
                            </HorizontalStackLayout>
                        </Border>

                        <Border Grid.Row="1"
                                Grid.Column="2"
                                Stroke="#000000"
                                StrokeThickness="0.5"
                                Padding="5">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="20" />
                            </Border.StrokeShape>
                            <HorizontalStackLayout Spacing="5" HorizontalOptions="Center" VerticalOptions="Center">
                                <toolkit:AvatarView
                                 HorizontalOptions="Center"
                                 VerticalOptions="Center"
                                 ImageSource="kenan.jpeg"
                                 HeightRequest="20"
                                 WidthRequest="20"/>
                                <Label Text="Kenen"
                                       TextColor="Black"
                                       FontSize="12" />
                            </HorizontalStackLayout>
                        </Border>
                    </Grid>

                    <Label Grid.Row="2"
                           Text="Played: October 15th, 2:15PM"
                           TextColor="Black"/>
                </Grid>
            </toolkit:Expander>

        </Grid>
    </ScrollView>
</ContentPage>
